<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% render 'css-variables' %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}
    {% render 'meta-tags' %}
    {{ content_for_header }}
    <link rel="icon" type="image/png" href="{{ 'favicon.ico' | asset_url }}">
    <link rel="shortcut icon" href="{{ 'favicon.ico' | asset_url }}">
    <link rel="apple-touch-icon" href="{{ 'favicon.ico' | asset_url }}">
    <style>
      body {
        background: #000;
        color: #fff;
        font-weight: bold;
        font-family: 'Times New Roman', Times, serif;
        min-height: 100vh;
        margin: 0;
      }
      .landing-wrapper {
        width: 100%;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        position: relative;
        z-index: 2;
        padding: 40px 5vw;
        box-sizing: border-box;
      }
      .landing-logo {
        margin-bottom: 2rem;
        max-width: 640px;
        width: 100%;
        filter: drop-shadow(0 0 8px #fff2);
      }
      .landing-heading {
        font-size: clamp(2rem, 6vw, 3.2rem);
        margin: 2rem 0 1.25rem;
        letter-spacing: 0.5px;
        text-shadow: 0 1px 0 #222, 0 2px 8px #000a;
      }
      .landing-subtext {
        font-size: 1.15rem;
        max-width: 760px;
        line-height: 1.4;
        margin: 0 auto 2.2rem;
        font-weight: 600;
        letter-spacing: 0.5px;
      }
      .landing-cta {
        display: inline-block;
        padding: 14px 34px;
        background: transparent;
        border: 2px solid #fff;
        color: #fff;
        text-transform: uppercase;
        letter-spacing: 1.2px;
        font-weight: 700;
        font-size: 1.05rem;
        border-radius: 4px;
        cursor: pointer;
        font-family: 'Times New Roman', Times, serif;
        transition: background .2s, color .2s;
        text-decoration: none;
      }
      .landing-cta:hover,
      .landing-cta:focus-visible {
        background: #fff;
        color: #000;
        outline: none;
      }
      .landing-social {
        margin-top: 2.5rem;
        display: flex;
        justify-content: center;
        width: 100%;
      }
      @media (max-width: 640px) {
        .landing-subtext { font-size: 1rem; }
        .landing-cta { font-size: .95rem; padding: 12px 26px; }
      }
    </style>
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": {{ shop.name | json }},
      "logo": {{ 'logo.png' | asset_url | json }},
      "url": {{ shop.url | json }},
      "sameAs": [
        {% if settings.instagram_url != blank %}{{ settings.instagram_url | json }}{% endif %}{% if settings.tiktok_url != blank %},{% endif %}
        {% if settings.tiktok_url != blank %}{{ settings.tiktok_url | json }}{% endif %}{% if settings.youtube_url != blank %},{% endif %}
        {% if settings.youtube_url != blank %}{{ settings.youtube_url | json }}{% endif %}
      ]
    }
    </script>
    <meta name="google-site-verification" content="cQT3m4WAClIG7LVSb9jwTrsBaW3XHArBN_kgB6ZfcUg" />
  </head>
  <body>
  <div style="display: none;" aria-hidden="true">{{ content_for_layout }}</div>
    <video
      style="z-index: -2; position: fixed; right: 0; bottom: 0; min-width: 100%; min-height: 100%; object-fit: fill;"
      autoplay
      loop
      muted
      playsinline
      defaultMuted
      oncontextmenu="return false;"
      preload="auto"
      id="myVideo"
    >
      <source src="https://cdn.shopify.com/videos/c/o/v/b79acf46bb6f498ca0023be1e5cb8408.mp4" type="video/mp4">
    </video>
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        var video = document.getElementById('myVideo');
        if (!video) return;
        function isMobile() {
          return /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
        }
        if (isMobile()) {
          video.muted = true;
          video.volume = 0;
          video.play();
        } else {
          video.muted = false;
          video.volume = 0.1;
          setTimeout(function () {
            video.play().catch(function (e) {
              video.muted = true;
              video.volume = 0;
              video.play();
            });
          }, 2500);
        }

        // On any user interaction, unmute and play video with sound if not already
        function globalTryPlayVideo() {
          if (video.muted || video.volume === 0) {
            video.muted = false;
            video.volume = 0.1;
            video.play().catch(function () {});
          }
        }
        document.addEventListener('click', globalTryPlayVideo, true);
        document.addEventListener('touchstart', globalTryPlayVideo, true);
        document.addEventListener('keydown', globalTryPlayVideo, true);
      });
    </script>
    <div
      style="position: fixed; z-index: -1; top: 0; left: 0; width: 100vw; height: 100vh; background: rgba(0,0,0,0.55);"
    ></div>
    <main class="landing-wrapper" role="main">
      <img width="500" height="500" src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }} logo" class="landing-logo" loading="lazy">
      <h1 class="landing-heading">Preparing the next way fire drop</h1>
      <p class="landing-subtext">Exclusive drops. Premium craft. Follow us and be first to enter the store when the collection opens.</p>
      <button disabled href="{{ routes.all_products_collection_url }}" class="landing-cta">Enter Store</button>
      <div class="landing-social">
        {% render 'social-icons', size: 48 %}
      </div>
    </main>
  </body>
</html>
