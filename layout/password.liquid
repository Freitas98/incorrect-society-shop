<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% render 'css-variables' %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}
    {% render 'meta-tags' %}
    {{ content_for_header }}
    <link rel="icon" type="image/png" href="{{ 'favicon.ico' | asset_url }}">
    <link rel="shortcut icon" href="{{ 'favicon.ico' | asset_url }}">
    <link rel="apple-touch-icon" href="{{ 'favicon.ico' | asset_url }}">
    <style>
      body {
        background: #000;
        color: #fff;
        font-weight: bold;
        font-family: 'Times New Roman', Times, serif;
        min-height: 100vh;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .password-outer {
        width: 90%;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
      }
      .password-logo {
        margin-bottom: 2rem;
        max-width: 650px;
        width: 100%;
        filter: drop-shadow(0 0 8px #fff2);
      }
      .password-message {
        font-size: 1.3rem;
        margin: 2rem 0 1.5rem 0;
        letter-spacing: 0.5px;
        text-shadow: 0 1px 0 #222, 0 2px 8px #000a;
      }
      .social-icons {
        margin-top: 1.5rem;
        justify-content: center;
      }
    </style>
  </head>
  <body>
    <div style="display: none;">{{ content_for_layout }}</div>
    <video style="z-index: -2; position: fixed; right: 0; bottom: 0; min-width: 100%; min-height: 100%; object-fit: fill;" autoplay loop muted playsinline defaultMuted oncontextmenu="return false;" preload="auto" id="myVideo">
      <source src="https://cdn.shopify.com/videos/c/o/v/b79acf46bb6f498ca0023be1e5cb8408.mp4" type="video/mp4">
    </video>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        var video = document.getElementById('myVideo');
        if (!video) return;
        function isMobile() {
          return /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
        }
        if (isMobile()) {
          video.muted = true;
          video.volume = 0;
          video.play();
        } else {
          video.muted = false;
          video.volume = 0.1;
          setTimeout(function() {
            video.play().catch(function(e) {
              video.muted = true;
              video.volume = 0;
              video.play();
            });
          }, 2500);
        }

        // On any user interaction, unmute and play video with sound if not already
        function globalTryPlayVideo() {
          if (video.muted || video.volume === 0) {
            video.muted = false;
            video.volume = 0.1;
            video.play().catch(function(){});
          }
        }
        document.addEventListener('click', globalTryPlayVideo, true);
        document.addEventListener('touchstart', globalTryPlayVideo, true);
        document.addEventListener('keydown', globalTryPlayVideo, true);
      });
    </script>
    <div style="position: fixed; z-index: -1; top: 0; left: 0; width: 100vw; height: 100vh; background: rgba(0,0,0,0.55);"></div>
    <div class="password-outer">
      <img width="500" height="500" src="{{ 'logo.png' | asset_url }}" alt="Logo" class="password-logo" loading="lazy" />
      <div style="margin-top:2.5rem;">
        <form id="passwordForm" method="post" action="/password" style="display: flex; flex-direction: column; align-items: center; gap: 1.5rem; max-width: 400px; margin: 0 auto;">
          <div class="countdown-container">
            <div class="countdown-label" id="countdownLabel">TIME UNTIL COLLECTION RELEASE:</div>
            <div id="countdown" class="countdown-timer">--:--:--:--</div>
          </div>
          <input class="passwordTextBox" name="password" type="password" autocomplete="current-password" placeholder="Password" style="width: 100%; max-width: 340px; margin-top: -45px; font-size: 1.2rem; padding: 16px 14px; border: 1px solid #fff; background: transparent; color: #fff; border-radius: 4px; font-family: 'Times New Roman', Times, serif; margin-bottom: 0.5rem; box-sizing: border-box;" required id="passwordInput">
          <button type="submit" class="password-btn-main" id="passwordEnterBtn">Enter</button>
        </form>
        <button id="releaseEnterBtn" class="releaseEnterBtn">ENTER</button>
      </div>
      <div style="position: absolute;right: 30px;bottom: 45px;display: flex; justify-content: flex-end; width: 100%;">
        {% render 'social-icons', size: 48 %}
      </div>
    </div>
    <style>
      .countdown-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 2rem;
      }
      .countdown-label {
        font-size: 2.5rem;
        color: #fff;
        margin-bottom: 0.5rem;
      }
      .countdown-timer {
        margin-top: 1rem;
        font-size: 4rem;
        font-weight: bold;
        color: #fff;
        border-radius: 16px;
        padding: 1rem 2.5rem;
      }
      @media (max-width: 600px) {
        .countdown-label {
          font-size: 3rem;
          padding: 0 0.5rem;
        }
        .countdown-timer {
          font-size: 2.6rem;
          border-width: 2px;
        }
      }
      @media (max-width: 400px) {
        .countdown-label {
          font-size: 2.95rem;
        }
        .countdown-timer {
          font-size: 2rem;
        }
      }
      .password-btn-main {
        display: inline-block;
        padding: 12px 24px;
        background: transparent;
        border: 2px solid var(--color-foreground, #fff);
        color: var(--color-foreground, #fff);
        text-transform: uppercase;
        letter-spacing: 1.2px;
        font-weight: 700;
        font-size: 1.1rem;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 10px;
        font-family: 'Times New Roman', Times, serif;
        transition: background 0.15s, color 0.15s;
      }
      .password-btn-main:hover {
        border: 1px solid #fff;
      }
      .releaseEnterBtn {
        display: none;
        padding: 12px 24px;
        background: transparent;
        border: 2px solid var(--color-foreground, #fff);
        color: var(--color-foreground, #fff);
        text-transform: uppercase;
        letter-spacing: 1.2px;
        font-weight: 700;
        font-size: 1.1rem;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 10px;
        font-family: 'Times New Roman', Times, serif;
        transition: background 0.15s, color 0.15s;
      }
      .releaseEnterBtn:hover {
        border: 1px solid #fff;
      }
      .passwordTextBox::placeholder {
        color: #fff;
      }
    </style>
    <script>
      function updateCountdown() {

        const target = new Date('2025-08-27T02:45:00+01:00');
        const now = new Date();
        const lisbonNow = new Date(now.toLocaleString('en-US', { timeZone: 'Europe/Lisbon' }));
        const diff = target - lisbonNow;
        if (diff > 0) {
          const days = String(Math.floor(diff / (1000 * 60 * 60 * 24))).padStart(2, '0');
          const hours = String(Math.floor(diff / (1000 * 60 * 60)) % 24).padStart(2, '0');
          const minutes = String(Math.floor(diff / (1000 * 60)) % 60).padStart(2, '0');
          const seconds = String(Math.floor(diff / 1000) % 60).padStart(2, '0');
          document.getElementById('countdown').textContent = `${days}:${hours}:${minutes}:${seconds}`;
        } else {
          document.getElementById('countdown').textContent = '00:00:00:00';
          document.getElementById('countdownLabel').textContent = 'OUTSIDER RELEASED';
          var pwInput = document.getElementById('passwordInput');
          var pwBtn = document.getElementById('passwordEnterBtn');
          var pwForm = document.getElementById('passwordForm');
          var releaseBtn = document.getElementById('releaseEnterBtn');
          var timerCount = document.getElementById('countdown');
          if (pwInput) pwInput.style.display = 'none';
          if (pwBtn) pwBtn.style.display = 'none';
          if (timerCount) timerCount.style.display = 'none';
          if (releaseBtn) releaseBtn.style.display = 'inline-block';

        }
      }
      setInterval(updateCountdown, 1000);
      updateCountdown();
      document.addEventListener('DOMContentLoaded', function() {
        var releaseBtn = document.getElementById('releaseEnterBtn');
        if (releaseBtn) {
          releaseBtn.addEventListener('click', function() {
            var pwForm = document.getElementById('passwordForm');
            if (pwForm) pwForm.style.display = 'none';
            window.location.href = '/';
          });
        }
      });
    </script>
  </body>
</html>

