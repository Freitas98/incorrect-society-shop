<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% render 'css-variables' %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}
    {% render 'meta-tags' %}
    {{ content_for_header }}
    <link rel="icon" type="image/png" href="{{ 'favicon.ico' | asset_url }}">
    <link rel="shortcut icon" href="{{ 'favicon.ico' | asset_url }}">
    <link rel="apple-touch-icon" href="{{ 'favicon.ico' | asset_url }}">
    <style>
      body {
        background: #000;
        color: #fff;
        font-weight: bold;
        font-family: 'Times New Roman', Times, serif;
        min-height: 100vh;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .password-outer {
        width: 90%;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
      }
      .password-logo {
        margin-bottom: 2rem;
        max-width: 650px;
        width: 100%;
        filter: drop-shadow(0 0 8px #fff2);
      }
      .password-message {
        font-size: 3rem;
        margin: 2rem 0 1.5rem 0;
        letter-spacing: 0.5px;
        text-shadow: 0 1px 0 #222, 0 2px 8px #000a;
      }
      .social-icons {
        margin-top: 1.5rem;
        justify-content: center;
      }
    </style>
    <meta name="google-site-verification" content="cQT3m4WAClIG7LVSb9jwTrsBaW3XHArBN_kgB6ZfcUg" />
  </head>
  <body>
    <div style="display: none;">{{ content_for_layout }}</div>
    <video
      style="z-index: -2; position: fixed; right: 0; bottom: 0; min-width: 100%; min-height: 100%; object-fit: fill;"
      autoplay
      loop
      muted
      playsinline
      defaultMuted
      oncontextmenu="return false;"
      preload="auto"
      id="myVideo"
    >
      <source src="https://cdn.shopify.com/videos/c/o/v/b79acf46bb6f498ca0023be1e5cb8408.mp4" type="video/mp4">
    </video>
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        var video = document.getElementById('myVideo');
        if (!video) return;
        function isMobile() {
          return /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
        }
        if (isMobile()) {
          video.muted = true;
          video.volume = 0;
          video.play();
        } else {
          video.muted = false;
          video.volume = 0.1;
          setTimeout(function () {
            video.play().catch(function (e) {
              video.muted = true;
              video.volume = 0;
              video.play();
            });
          }, 2500);
        }

        // On any user interaction, unmute and play video with sound if not already
        function globalTryPlayVideo() {
          if (video.muted || video.volume === 0) {
            video.muted = false;
            video.volume = 0.1;
            video.play().catch(function () {});
          }
        }
        document.addEventListener('click', globalTryPlayVideo, true);
        document.addEventListener('touchstart', globalTryPlayVideo, true);
        document.addEventListener('keydown', globalTryPlayVideo, true);
      });
    </script>
    <div
      style="position: fixed; z-index: -1; top: 0; left: 0; width: 100vw; height: 100vh; background: rgba(0,0,0,0.55);"
    ></div>
    <div class="password-outer">
      <img width="500" height="500" src="{{ 'logo.png' | asset_url }}" alt="Logo" class="password-logo" loading="lazy">
      <h1 class="landing-heading">Preparing the next way fire drop</h1>
      <p class="landing-subtext">Exclusive drops. Premium craft. Follow us and be first to enter the store when the collection opens.</p>
      <div style="margin-top:2.5rem;">
        {% form 'storefront_password' %}
          <input
            class="passwordTextBox"
            name="password"
            type="password"
            autocomplete="current-password"
            placeholder="Password"
            style="width: 100%; max-width: 340px; font-size: 1.2rem; padding: 16px 14px; border: 1px solid #fff; background: transparent; color: #fff; border-radius: 4px; font-family: 'Times New Roman', Times, serif; margin-bottom: 0.5rem; box-sizing: border-box;"
            required
            id="passwordInput"
          >
          <button type="submit" class="password-btn-main" id="passwordEnterBtn">Enter</button>
        {% endform %}
      </div>
      <div class="landing-social">
        {% render 'social-icons', size: 48 %}
      </div>
    </div>
    <style>
      .landing-social {
        margin-top: 10px;
      }
      .landing-heading {
        font-size: 2.5rem;
        margin-bottom: 10px;
        letter-spacing: 1px;
        text-shadow: 0 1px 0 #222, 0 2px 8px #000a;
      }
      .password-btn-main {
        display: inline-block;
        padding: 12px 24px;
        background: transparent;
        border: 1px solid var(--color-foreground, #fff);
        color: var(--color-foreground, #fff);
        text-transform: uppercase;
        letter-spacing: 1.2px;
        font-weight: 700;
        font-size: 1.1rem;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 35px;
        font-family: 'Times New Roman', Times, serif;
        transition: background 0.15s, color 0.15s;
      }
      .password-btn-main:hover {
        border: 1px solid #fff;
      }
      .passwordTextBox::placeholder {
        color: #fff;
      }
    </style>
  </body>
</html>
