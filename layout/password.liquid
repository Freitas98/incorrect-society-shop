<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% render 'css-variables' %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}
    {% render 'meta-tags' %}
    {{ content_for_header }}
    <link rel="icon" type="image/png" href="{{ 'favicon.ico' | asset_url }}">
    <link rel="shortcut icon" href="{{ 'favicon.ico' | asset_url }}">
    <link rel="apple-touch-icon" href="{{ 'favicon.ico' | asset_url }}">
    <style>
      body {
        background: #000;
        color: #fff;
        font-weight: bold;
        font-family: 'Times New Roman', Times, serif;
        min-height: 100vh;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .password-outer {
        padding: 50px;
        width: 100vw;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
      }
      .password-logo {
        margin-bottom: 2rem;
        max-width: 650px;
        width: 100%;
        filter: drop-shadow(0 0 8px #fff2);
      }
      .password-message {
        font-size: 1.3rem;
        margin: 2rem 0 1.5rem 0;
        letter-spacing: 0.5px;
        text-shadow: 0 1px 0 #222, 0 2px 8px #000a;
      }
      .social-icons {
        margin-top: 1.5rem;
        justify-content: center;
      }
    </style>
  </head>
  <body>
    <video autoplay muted loop style="z-index: -2; position: fixed; right: 0; bottom: 0; min-width: 100%; min-height: 100%;">
      <source src="https://cdn.shopify.com/videos/c/o/v/a62fdf4ab5cd438ba88451dc83e1ea77.mov" type="video/mp4">
    </video>
    <div style="position: fixed; z-index: -1; top: 0; left: 0; width: 100vw; height: 100vh; background: rgba(0,0,0,0.55);"></div>
    <div style="display: none;">{{ content_for_layout }}</div>
    <div class="password-outer">
      <img width="500" height="500" src="{{ 'logo.png' | asset_url }}" alt="Logo" class="password-logo" loading="lazy" />
      <div class="password-message">
        Follow our social media to be the first to know when it opens
      </div>
      {% render 'social-icons', size: 48 %}
      <div style="margin-top:2.5rem;">
        <form method="post" action="/password" style="display: flex; flex-direction: column; align-items: center; gap: 1.5rem; max-width: 400px; margin: 0 auto;">
          <div style="font-size: 1.1rem; margin-bottom: 0.5rem; line-height: 1.6;">
            If you are one of the privileged ones, put the password that you have received
          </div>
          <input class="passwordTextBox" name="password" type="password" autocomplete="current-password" placeholder="Password" style="width: 100%; max-width: 340px; font-size: 1.2rem; padding: 16px 14px; border: 1px solid #fff; background: transparent; color: #fff; border-radius: 4px; font-family: 'Times New Roman', Times, serif; margin-bottom: 0.5rem; box-sizing: border-box;" required>
          <button type="submit" class="password-btn-main">Enter</button>
        </form>
      </div>
      <style>
        .password-btn-main {
          display: inline-block;
          padding: 12px 24px;
          background: transparent;
          border: 2px solid var(--color-foreground, #fff);
          color: var(--color-foreground, #fff);
          text-transform: uppercase;
          letter-spacing: 1.2px;
          font-weight: 700;
          font-size: 1.1rem;
          border-radius: 4px;
          cursor: pointer;
          font-family: 'Times New Roman', Times, serif;
          transition: background 0.15s, color 0.15s;
        }
        .password-btn-main:hover {
          background: var(--color-foreground, #fff);
          color: #000;
        }
        .passwordTextBox::placeholder {
          color: #fff;
        }
      </style>
    </div>
  </body>
</html>
