{% comment %}
  Shopify challenge (captcha) page styled like the rest of the site.
  This uses the default theme layout and our color variables to avoid a jarring experience.
{% endcomment %}

{% layout 'theme' %}

<section class="shopify-challenge shopify-challenge__container panel-constrained u-text-center u-stack-compact">
  <h1 class="shopify-challenge-title">{{ 'challenge.verify_heading' | t | default: 'Verification' }}</h1>
  <p class="text-lead">
    {{ 'challenge.title' | t | default: 'Please verify you are human' }}
  </p>

  <div class="challenge-content u-grid-center u-gap-16 u-mb-22">
    {{ content_for_layout }}
  </div>

  <p class="shopify-challenge-reason text-muted text-small u-mt-xs">
    {{ 'challenge.footer' | t | default: 'This step protects our store from spam and abuse.' }}
  </p>
</section>

<style>
  .shopify-challenge .shopify-challenge__button,
  .shopify-challenge button[type='submit'] {
  background-color: var(--color-primary);
    color: var(--color-foreground);
  border: 1px solid var(--color-primary);
    padding: 10px 16px;
    border-radius: 4px;
    cursor: pointer;
  }
  .shopify-challenge .shopify-challenge__button:hover,
  .shopify-challenge button[type='submit']:hover {
    filter: brightness(1.1);
  }
  .shopify-challenge .shopify-challenge__button:focus-visible,
  .shopify-challenge button[type='submit']:focus-visible {
  outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }
  .shopify-challenge .g-recaptcha,
  .shopify-challenge iframe,
  .shopify-challenge .h-captcha {
    margin-inline: auto;
  }
  /* Align any default forms inside content */
  .shopify-challenge form {
    display: grid;
    gap: 12px;
    justify-items: center;
  }
</style>
