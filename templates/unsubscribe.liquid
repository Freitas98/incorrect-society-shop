{% comment %}
  Fallback template for /unsubscribe → forwards to /account/unsubscribe preserving the query string
{% endcomment %}

{% layout 'theme' %}

<section class="customers-unsubscribe panel-constrained u-text-center u-stack-spacious">
  <h1 class="policy-title">{{ 'unsubscribe.title' | t | default: 'Unsubscribed' }}</h1>
  <p class="text-lead">
    {{
      'unsubscribe.message'
      | t
      | default: 'You’ve been unsubscribed from our emails. You can subscribe again anytime.'
    }}
  </p>
  <div class="u-hidden">{{ content_for_layout }}</div>
  <script>
    (function () {
      const search = window.location.search || '';
      window.location.replace('{{ routes.root_url }}account/unsubscribe' + search);
    })();
  </script>
  <p class="text-muted text-small u-mt-md">
    <noscript>
      <a href="{{ routes.account_url }}/unsubscribe{% if request.query_string != blank %}?{{ request.query_string }}{% endif %}"
        >Click here to continue</a
      >
    </noscript>
  </p>
</section>
