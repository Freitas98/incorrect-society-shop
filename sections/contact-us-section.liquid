<section class="feature-section" aria-labelledby="contact-heading">
  <h1 id="contact-heading" class="feature-heading">{{ 'contact.contact_us' | t | default: 'Contact Us' }}</h1>
  <p class="feature-subheading">{{ 'contact.contact_highlight' | t | default: 'Get in touch' }}</p>
  <p class="feature-intro">{{ 'contact.contact_intro' | t }}</p>

  <div class="feature-card">
    <h2 class="feature-card-title">{{ 'contact.contact_now' | t | default: 'Contact us now' }}</h2>
    <div class="feature-card-copy">{{ 'contact.contact_prompt_html' | t }}</div>

    <form
      method="post"
      action="/contact#contact_form"
      id="contact_form"
      accept-charset="UTF-8"
      class="feature-form"
    >
      <input type="hidden" name="form_type" value="contact">
      <input type="hidden" name="utf8" value="âœ“">

      <input
        type="text"
        id="ContactFormName"
        name="contact[name]"
        required
        placeholder="{{ 'contact.comment_form_name' | t | default: 'Your name' }}"
        class="feature-input"
      >

      <input
        type="email"
        id="ContactFormEmail"
        name="contact[email]"
        required
        placeholder="{{ 'contact.comment_form_email' | t | default: 'Your email' }}"
        class="feature-input"
      >

      <textarea
        id="ContactFormMessage"
        name="contact[body]"
        rows="5"
        required
        placeholder="{{ 'contact.message' | t | default: 'How can we help?' }}"
        class="feature-input feature-input--textarea"
      ></textarea>

      <button type="submit" class="btn btn--primary btn--block">
        {{ 'contact.send_message' | t | default: 'Send message' }}
      </button>
    </form>

    <p class="feature-footnote">
      {{ 'contact.contact_note' | t | default: 'Your message will be sent directly to the Incorrect Society team.' }}
    </p>

    <div class="feature-social">
      <p class="feature-social-label">{{ 'newsletter.social_highlight' | t | default: 'Follow us on social media:' }}</p>
      <div class="feature-social-links">
        <a href="https://www.instagram.com/incorrect.society/" target="_blank">Instagram</a>
        <a href="https://www.tiktok.com/@.incorrectsociety" target="_blank">TikTok</a>
        <a href="https://www.youtube.com/@IncorrectSociety" target="_blank">YouTube</a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Contact Us Section",
  "tag": "section",
  "class": "shopify-section-contact-us",
  "settings": []
}
{% endschema %}
