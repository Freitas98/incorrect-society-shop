{% comment %}
  This section is used in the 404 template to render page shown when customers
  enter an invalid store URL.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/404
{% endcomment %}

<section class="page-404-section">
  <div class="page-404-container">
    <div class="page-404-content">
      <h1 class="page-404-title">{{ '404.title' | t }}</h1>
      <p class="page-404-subtitle">{{ '404.subtitle' | t }}</p>
      <p class="page-404-message">{{ '404.not_found' | t }}</p>
      <a href="{{ routes.root_url }}" class="page-404-button">
        {{ '404.back_to_shopping' | t }}
      </a>
    </div>
  </div>
</section>

<style>
  .page-404-section {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 80px 40px;
    background-color: var(--color-background);
  }

  .page-404-container {
    max-width: 600px;
    width: 100%;
    margin: 0 auto;
  }

  .page-404-content {
    text-align: center;
  }

  .page-404-title {
    font-family: var(--font-heading-family);
    font-size: clamp(48px, 8vw, 72px);
    font-weight: var(--font-heading-weight);
    color: var(--color-foreground);
    margin: 0 0 20px 0;
    letter-spacing: -0.02em;
  }

  .page-404-subtitle {
    font-family: var(--font-heading-family);
    font-size: clamp(20px, 4vw, 28px);
    font-weight: var(--font-heading-weight);
    color: var(--color-foreground);
    margin: 0 0 16px 0;
    letter-spacing: -0.01em;
  }

  .page-404-message {
    font-family: var(--font-primary-family);
    font-size: 14px;
    color: var(--color-foreground);
    opacity: 0.7;
    margin: 0 0 32px 0;
    line-height: 1.6;
  }

  .page-404-button {
    display: inline-block;
    padding: 14px 32px;
    background-color: var(--color-foreground);
    color: var(--color-background);
    font-family: var(--font-primary-family);
    font-size: 12px;
    font-weight: 500;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    border: 1px solid var(--color-foreground);
    transition: all 0.3s ease;
  }

  .page-404-button:hover {
    background-color: var(--color-background);
    color: var(--color-foreground);
  }

  @media (max-width: 768px) {
    .page-404-section {
      min-height: 60vh;
      padding: 60px 20px;
    }

    .page-404-title {
      font-size: 48px;
      margin-bottom: 16px;
    }

    .page-404-subtitle {
      font-size: 20px;
      margin-bottom: 12px;
    }

    .page-404-message {
      font-size: 13px;
      margin-bottom: 28px;
    }

    .page-404-button {
      padding: 12px 28px;
      font-size: 11px;
    }
  }
</style>

{% schema %}
{
  "name": "t:general.404",
  "settings": []
}
{% endschema %}
