    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-weight: 500;
  }

  .line-total {
    text-align: right;
  }

  .total-label {
    color: #cccccc;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
