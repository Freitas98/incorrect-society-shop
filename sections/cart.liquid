    font-weight: 700;
    letter-spacing: 1px;
  }

  .discount-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
    color: var(--color-primary);
  }

  .discount-label {
    font-size: 16px;
    font-weight: 500;
  }

  .discount-amount {
