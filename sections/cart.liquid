  .empty-cart {
    text-align: center;
    padding: 60px 20px;
    max-width: 600px;
    margin: 0 auto;
  }

  .empty-cart-content {
    background: transparent;
    border: 1px dashed var(--color-border);
    border-radius: 0;
    padding: 40px 24px;
  }

  .empty-icon {
    font-size: 64px;
    margin-bottom: 20px;
    opacity: 0.5;
  }

  .empty-cart h2 {
    color: #ffffff;
    font-size: 32px;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin: 0 0 20px 0;
    font-weight: 300;
  }

