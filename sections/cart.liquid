    color: var(--color-foreground);
    padding: 4px 8px;
    border: 1px solid var(--color-foreground);
    border-radius: 0;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.8px;
  }

  .item-properties {
    margin-bottom: 12px;
  }

  .property {
    color: #999999;
    font-size: 14px;
    margin-bottom: 4px;
    display: block;
  }

  .item-pricing {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    margin-bottom: 20px;
  }

  .unit-price {
    color: var(--color-foreground);
    font-size: 18px;
    font-weight: 700;
    letter-spacing: 1px;
  }

  .original-price {
