    position: relative;
    border-radius: 0;
    overflow: hidden;
    background-color: transparent;
  }

  .item-image img {
    width: 100%;
    height: 200px;
    object-fit: contain;
    border-radius: 0;
    transition: transform 0.3s ease;
    background-color: transparent;
  }

  .cart-item-card:hover .item-image img {
    transform: scale(1.05);
  }

  .no-image {
    width: 200px;
    height: 200px;
    background-color: var(--color-background);
    border: 1px dashed var(--color-border);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-foreground);
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-radius: 0;
  }

  /* Product Info */
  .item-info {
    min-width: 0;
  }

  .item-title {
    color: #ffffff;
    font-size: 22px;
    font-weight: 600;
    margin: 0 0 15px 0;
    text-transform: uppercase;
    letter-spacing: 2px;
    line-height: 1.3;
    word-break: break-word;
