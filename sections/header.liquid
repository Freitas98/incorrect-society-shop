    color: var(--color-primary);
  }
  .header-cart:hover .nav-icon {
    color: var(--color-primary);
  }
  .header-right {
    display: flex;
    align-items: center;
    gap: 8px;
    justify-content: flex-end;
    margin-right: 40px;
  }

