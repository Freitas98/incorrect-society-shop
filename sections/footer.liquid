<footer class="clean-footer">
  <div class="footer__copyright">
    &copy; {{ 'now' | date: '%Y' }}
    {{ shop.name | upcase }}
  </div>
  <div class="footer-content">
    <div class="footer-newsletter">
      <p>Sign up for our newsletter and get 10% discount!</p>
      {% form 'customer', class: 'newsletter-form footer-newsletter-form', onsubmit: 'window.loadingScreen.show();' %}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <input type="email" name="contact[email]" placeholder="Enter your email" required>
        <button type="submit" class="btn btn--secondary">Sign Up</button>
        
        {%- if form.errors -%}
          <small class="newsletter-form__message form__message" id="Newsletter-error--{{ section.id }}">
            {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
          </small>
        {%- endif -%}
        {%- if form.posted_successfully? -%}
          <p class="newsletter-form__message newsletter-form__message--success form__message" id="Newsletter-success--{{ section.id }}" tabindex="-1" autofocus style="text-align: center; width: 100%;">
            Thanks for subscribing!
          </p>
          <script>
            if (window.history.replaceState) {
              window.history.replaceState(null, null, window.location.pathname);
            }
            try {
              localStorage.setItem('newsletter_modal_status', 'subscribed');
            } catch(e){}
          </script>
        {%- endif -%}
      {% endform %}
    </div>
    <div class="footer-links">
      <a href="{{ pages['newsletter'].url }}">Newsletter</a>
      <a href="{{ pages['contact-us'].url }}">Contact</a>
      <a href="{{ pages['terms-of-service'].url }}">Policies and Terms</a>
    </div>
    {% if section.settings.show_payment_icons %}
      <div class="footer-payment-icons">
        {% for type in shop.enabled_payment_types %}
          {{ type | payment_type_svg_tag: class: 'payment-icon' }}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</footer>

{% stylesheet %}
  .clean-footer {
    margin-top: auto; /* Push footer to bottom */
    padding: 40px 0;
    border-top: 1px solid var(--color-border);
    background-color: transparent;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .footer-newsletter-form {
    display: flex;
    gap: 20px;
  }

  .footer-content {
    max-width: var(--page-width);
    padding: 0 var(--page-margin);
    display: flex;
    justify-content: space-between;
    align-items: center;;
    gap: 25px;
  }

  .footer__copyright {
    color: var(--color-foreground);
    font-size: 14px;
    letter-spacing: var(--font-heading-letter-spacing);
    margin-bottom: 20px;
    text-align: center;
  }

  .footer-links {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 20px;
    flex-wrap: wrap;
  }

  .footer-payment-icons {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px;
    flex-wrap: wrap;
  }

  .payment-icon {
    height: 24px;
    width: auto;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .payment-icon:hover {
    opacity: 1;
  }

  .clean-footer a {
    color: var(--color-foreground);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .clean-footer a:hover {
    color: var(--color-primary);
  }

  .footer-newsletter {
    margin-bottom: 20px;
    text-align: left;
    gap: 18px;
    display: flex;
    justify-content: center;
    flex-direction: column;
  }

  .footer-newsletter p {
    font-size: 14px;
  }

  @media (max-width: 768px) {
    .footer-content {
      text-align: center;
      justify-content: center;
      gap: 20px;
      display: flex;
    }

    .footer-newsletter {
      text-align: center;
    }

    .footer-newsletter-form {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.footer",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    }
  ]
}
{% endschema %}
