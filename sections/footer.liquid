<footer class="site-footer full-width">
  <div class="footer-container">
    <!-- Newsletter Section -->
    <div class="footer-newsletter-section">
      <h3 class="footer-newsletter-title">Newsletter | subscribe & get a 10% off</h3>
      <p class="footer-newsletter-subtitle">Receive news about Scuffers collections, restocks, events and sales.</p>
      {% form 'customer', class: 'footer-newsletter-form', onsubmit: 'window.loadingScreen.show();' %}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="footer-newsletter-input-wrapper">
          <input type="email" name="contact[email]" placeholder="Enter your email address" required class="footer-newsletter-input">
        </div>
        {%- if form.errors -%}
          <small class="newsletter-form__message form__message">
            {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
          </small>
        {%- endif -%}
        {%- if form.posted_successfully? -%}
          <p class="newsletter-form__message newsletter-form__message--success">Thanks for subscribing!</p>
        {%- endif -%}
      {% endform %}
      <a href="{{ pages['newsletter'].url }}" class="footer-signup-link">
        <span class="arrow">→</span> Sign up and get 10% off
      </a>
    </div>

    <!-- Footer Links Columns -->
    <div class="footer-links-columns">
      <!-- Contact Us -->
      <div class="footer-column">
        <h4 class="footer-column-title">Contact us</h4>
        <ul class="footer-column-links">
          <li><a href="{{ pages['contact-us'].url }}">Contact</a></li>
        </ul>
      </div>

      <!-- Client Services -->
      <div class="footer-column">
        <h4 class="footer-column-title">Client Services</h4>
        <ul class="footer-column-links">
          <li><a href="{{ pages['return-policy'].url }}">Make a return</a></li>
        </ul>
      </div>

      <!-- Company -->
      <div class="footer-column">
        <h4 class="footer-column-title">Company</h4>
        <ul class="footer-column-links">
          <li><a href="{{ pages['return-policy'].url }}">Returns & exchanges</a></li>
          <li><a href="{{ pages['shipping-policy'].url }}">Shipping policy</a></li>
          <li><a href="{{ pages['terms-of-service'].url }}">Terms & conditions</a></li>
        </ul>
      </div>

      <!-- Social -->
      <div class="footer-column">
        <h4 class="footer-column-title">Social</h4>
        <ul class="footer-column-links">
          <li><a href="{{ settings.instagram_url }}" target="_blank" rel="noopener">Instagram</a></li>
          <li><a href="{{ settings.tiktok_url }}" target="_blank" rel="noopener">Tiktok</a></li>
          <li><a href="{{ settings.youtube_url }}" target="_blank" rel="noopener">Youtube</a></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Footer Bottom -->
  <div class="footer-bottom">
    <div class="footer-bottom-content">
      <span class="footer-copyright">{{ shop.name | upcase }} ® NOT IN ACCORDANCE WITH ANY STANDARD OR RULE</span>
      <img src="https://cdn.shopify.com/s/files/1/0954/9840/4181/files/Logo_black.svg?v=1764257555" alt="{{ shop.name }}" class="footer-logo" width="80" height="40">
    </div>
  </div>
</footer>

{% stylesheet %}
  .site-footer {
    margin-top: auto;
    background-color: var(--color-surface);
    padding-top: 60px;
    width: 100%;
  }

  /* Make footer full width */
  .shopify-section:has(.site-footer) {
    grid-column: 1 / -1;
    max-width: none;
  }

  .footer-container {
    width: 100%;
    max-width: none;
    margin: 0 auto;
    padding: 0 60px;
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 60px;
  }

  /* Newsletter Section */
  .footer-newsletter-section {
    max-width: 400px;
  }

  .footer-newsletter-title {
    font-family: var(--font-heading-family);
    font-size: 18px;
    font-weight: var(--font-heading-weight);
    margin: 0 0 8px 0;
    color: var(--color-foreground);
  }

  .footer-newsletter-subtitle {
    font-size: 13px;
    color: var(--color-foreground);
    opacity: 0.7;
    margin: 0 0 24px 0;
    line-height: 1.5;
  }

  .footer-newsletter-form {
    margin-bottom: 20px;
  }

  .footer-newsletter-input-wrapper {
    position: relative;
  }

  .footer-newsletter-input {
    width: 100%;
    padding: 14px 16px;
    border: 1px solid var(--color-border);
    background: var(--color-background);
    font-family: var(--font-primary-family);
    font-size: 13px;
    color: var(--color-foreground);
  }

  .footer-newsletter-input::placeholder {
    color: var(--color-foreground);
    opacity: 0.5;
  }

  .footer-signup-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 13px;
    color: var(--color-foreground);
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .footer-signup-link:hover {
    opacity: 0.7;
  }

  .footer-signup-link .arrow {
    font-size: 14px;
  }

  /* Footer Links Columns */
  .footer-links-columns {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px;
  }

  .footer-column-title {
    font-family: var(--font-heading-family);
    font-size: 14px;
    font-weight: var(--font-heading-weight);
    margin: 0 0 20px 0;
    color: var(--color-foreground);
  }

  .footer-column-title sup {
    font-size: 10px;
    opacity: 0.5;
    margin-left: 2px;
  }

  .footer-column-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer-column-links a {
    font-size: 13px;
    color: var(--color-foreground);
    text-decoration: none;
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .footer-column-links a:hover {
    opacity: 1;
  }

  /* Footer Bottom */
  .footer-bottom {
    margin-top: 60px;
    padding: 30px 40px;
    border-top: 1px solid var(--color-border);
  }

  .footer-bottom-content {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-copyright {
    font-size: 11px;
    letter-spacing: 0.1em;
    color: var(--color-foreground);
    opacity: 0.6;
  }

  .footer-logo {
    height: 40px;
    width: auto;
    opacity: 0.8;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .footer-container {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .footer-newsletter-section {
      max-width: 100%;
    }

    .footer-links-columns {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .footer-container {
      padding: 0 20px;
    }

    .footer-links-columns {
      grid-template-columns: 1fr 1fr;
      gap: 30px;
    }

    .footer-bottom {
      padding: 20px;
    }

    .footer-bottom-content {
      flex-direction: column;
      gap: 20px;
      text-align: center;
    }
  }
{% endstylesheet %}

