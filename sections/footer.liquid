<footer class="clean-footer">
  <div class="footer__copyright">
    &copy; {{ 'now' | date: '%Y' }}
    {{ shop.name | upcase }}
  </div>
  <div class="footer-content">
    <div class="footer-newsletter">
      <p>Sign up for our newsletter and get 10% discount!</p>
      <form action="/contact" method="post" class="newsletter-form">
        <input type="email" name="contact[email]" placeholder="Enter your email" required>
        <input type="hidden" name="contact[tags]" value="newsletter">
        <button type="submit">Sign Up</button>
      </form>
    </div>
    <div class="footer-links">
      <a href="{{ pages['newsletter'].url }}">Newsletter</a>
      <a href="{{ pages['contact-us'].url }}">Contact</a>
      <a href="{{ pages['terms-of-service'].url }}">Policies and Terms</a>
    </div>
    {% if section.settings.show_payment_icons %}
      <div class="footer-payment-icons">
        {% for type in shop.enabled_payment_types %}
          {{ type | payment_type_svg_tag: class: 'payment-icon' }}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</footer>

{% stylesheet %}
  .clean-footer {
    margin-top: auto; /* Push footer to bottom */
    padding: 40px 0;
    border-top: 1px solid var(--color-border);
    background-color: transparent;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .footer-content {
    max-width: var(--page-width);
    padding: 0 var(--page-margin);
    display: flex;
    justify-content: space-between;
    align-items: center;;
  }

  .footer__copyright {
    color: var(--color-foreground);
    font-size: 14px;
    letter-spacing: 1px;
    margin-bottom: 20px;
    text-align: center;
  }

  .footer-links {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 20px;
    flex-wrap: wrap;
  }

  .footer-payment-icons {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px;
    flex-wrap: wrap;
  }

  .payment-icon {
    height: 24px;
    width: auto;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .payment-icon:hover {
    opacity: 1;
  }

  .clean-footer a {
    color: var(--color-foreground);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .clean-footer a:hover {
    color: var(--color-primary);
  }

  .footer-newsletter {
    margin-bottom: 20px;
    text-align: left;
  }

  .footer-newsletter p {
    font-size: 14px;
    margin-bottom: 10px;
    color: var(--color-foreground);
  }

  .newsletter-form {
    display: flex;
    gap: 10px;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: wrap;
  }

  .newsletter-form input[type="email"] {
    flex: 1;
    min-width: 200px;
    padding: 8px 12px;
    border: 1px solid var(--color-border);
    border-radius: var(--style-border-radius-inputs);
    background-color: var(--color-background);
    color: var(--color-foreground);
    font-size: 14px;
  }

  .newsletter-form button {
    padding: 8px 16px !important;
    border: 1px solid var(--color-primary) !important;
    border-radius: var(--style-border-radius-buttons) !important;
    background-color: transparent !important;
    color: var(--color-primary) !important;
    font-size: 14px !important;
    cursor: pointer !important;
    transition: all 0.3s ease !important;
  }

  .newsletter-form button:hover {
    background-color: var(--color-primary) !important;
    color: var(--color-background) !important;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.footer",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    }
  ]
}
{% endschema %}
