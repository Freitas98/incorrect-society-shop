                                    <span>XL</span>
                                    <span>{% render 'size-measurements', garment: 'hoodie', size: 'xl', point: 'a', unit: 'inches' %}</span>
                                    <span>{% render 'size-measurements', garment: 'hoodie', size: 'xl', point: 'b', unit: 'inches' %}</span>
                                    <span>{% render 'size-measurements', garment: 'hoodie', size: 'xl', point: 'c', unit: 'inches' %}</span>
                                  </div>
                                </div>
                              </div>
                              <div class="diagram-wrapper">
                                <img src="{{ 'hoodie-diagram.svg' | asset_url }}" alt="Hoodie Diagram" width="150" height="auto">
                              </div>
                            </div>
                          {% else %}
                            <div class="tooltip-grid">
                              <div class="table-wrapper">
                                <div class="size-table unit-cm">
                                  <div class="size-row header">
                                    <span>Size</span>
                                    <span>Width (A)</span>
                                    <span>Length (B)</span>
                                    <span>Sleeve (C)</span>
                                  </div>
                                  <div class="size-row">
                                    <span>S</span>
                                    <span>{% render 'size-measurements', garment: 'tshirt', size: 's', point: 'a', unit: 'cm' %}</span>
                                    <span>{% render 'size-measurements', garment: 'tshirt', size: 's', point: 'b', unit: 'cm' %}</span>
                                    <span>{% render 'size-measurements', garment: 'tshirt', size: 's', point: 'c', unit: 'cm' %}</span>
                                  </div>
                                  <div class="size-row">
                                    <span>M</span>
                                    <span>{% render 'size-measurements', garment: 'tshirt', size: 'm', point: 'a', unit: 'cm' %}</span>
                                    <span>{% render 'size-measurements', garment: 'tshirt', size: 'm', point: 'b', unit: 'cm' %}</span>
