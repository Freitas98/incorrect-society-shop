      if (images[index]) {
        images[index].style.display = 'block';
        images[index].classList.add('active');
      }

      // Activate current indicator
      if (indicators[index]) {
        indicators[index].classList.add('active');
      }

      currentImageIndex = index;
    }

    function nextImage() {
      const nextIndex = (currentImageIndex + 1) % images.length;
      showImage(nextIndex);
    }

    function prevImage() {
      const prevIndex = (currentImageIndex - 1 + images.length) % images.length;
      showImage(prevIndex);
    }

    function startAutoSlide() {
      if (images.length > 1) {
        autoSlideInterval = setInterval(nextImage, 30000); // Change image every 30 seconds
      }
    }

    function stopAutoSlide() {
      clearInterval(autoSlideInterval);
    }

    // Event listeners
    if (nextBtn) {
      nextBtn.addEventListener('click', function () {
        stopAutoSlide();
        nextImage();
        startAutoSlide();
      });
    }

    if (prevBtn) {
      prevBtn.addEventListener('click', function () {
        stopAutoSlide();
        prevImage();
        startAutoSlide();
      });
    }

    indicators.forEach((indicator, index) => {
      indicator.addEventListener('click', function () {
        stopAutoSlide();
        showImage(index);
        startAutoSlide();
      });
    });

    // Pause auto-slide on hover
    const mainImageContainer = document.querySelector('.main-image-container');
    if (mainImageContainer) {
      mainImageContainer.addEventListener('mouseenter', stopAutoSlide);
      mainImageContainer.addEventListener('mouseleave', startAutoSlide);
    }

    // Initialize
    showImage(0);
    startAutoSlide();

    // Variant Selection - Simple and Reliable
    function initVariantSelection() {
      console.log('üöÄ Starting variant selection...');

      // Get variant data from the script tag
      const variantDataScript = document.getElementById('variant-data');
      if (!variantDataScript) {
        console.log('‚ùå No variant data found');
        return;
      }

      const variantData = JSON.parse(variantDataScript.textContent);
      console.log('üìã Variant data loaded:', variantData);

      // Check if this is a product with variants or a simple product
      const hasVariantOptions = variantData.options && variantData.options.length > 0;

      if (hasVariantOptions) {
        console.log('üìã Product with variants detected');

        // Build maps of available options for each position
        const availableOptionsByPosition = {};
        
        // Process all available variants
        variantData.variants.forEach((variant) => {
          if (variant.available) {
            // Store each option value by its position
            if (variant.option1) {
              if (!availableOptionsByPosition[0]) availableOptionsByPosition[0] = new Set();
              availableOptionsByPosition[0].add(variant.option1.toLowerCase());
            }
            if (variant.option2) {
              if (!availableOptionsByPosition[1]) availableOptionsByPosition[1] = new Set();
              availableOptionsByPosition[1].add(variant.option2.toLowerCase());
            }
            if (variant.option3) {
              if (!availableOptionsByPosition[2]) availableOptionsByPosition[2] = new Set();
              availableOptionsByPosition[2].add(variant.option3.toLowerCase());
            }
          }
        });

        console.log('Available options by position:', availableOptionsByPosition);

        // Get all option inputs grouped by position
        const optionGroups = {};
        document.querySelectorAll('input[name^="option-"]').forEach((input) => {
          const optionPosition = input.name.match(/option-(\d+)/)[1];
          if (!optionGroups[optionPosition]) {
            optionGroups[optionPosition] = [];
          }
          optionGroups[optionPosition].push(input);
        });

        // For each option input, check if its value is available at that position
        console.log('Checking option inputs:');
        document.querySelectorAll('input[name^="option-"]').forEach((input) => {
          const optionPosition = parseInt(input.name.match(/option-(\d+)/)[1]) - 1; // 0-based index
          const optionValue = input.value.trim().toLowerCase();
          const label = document.querySelector(`label[for="${input.id}"]`);

          console.log(`Input: name=${input.name}, value=${input.value}, position=${optionPosition}`);

          // Check if this option value is available at this position
          const positionOptions = availableOptionsByPosition[optionPosition];
          const isAvailable = positionOptions && positionOptions.has(optionValue);

          console.log(`Position ${optionPosition} options:`, positionOptions ? Array.from(positionOptions) : 'none');
          console.log(`Is ${optionValue} available at position ${optionPosition}?`, isAvailable);

          if (!isAvailable) {
            // Option is not available - disable it
            input.disabled = true;
            if (label) {
              label.classList.add('option-unavailable');
              label.style.pointerEvents = 'none';
            }
            console.log('‚ùå Disabled unavailable option:', input.value, 'at position', optionPosition);
          } else {
            // Option is available - enable it
            input.disabled = false;
            if (label) {
              label.classList.remove('option-unavailable');
              label.style.pointerEvents = 'auto';
            }
            console.log('‚úÖ Enabled available option:', input.value, 'at position', optionPosition);
          }
        });

        // Function to update option availability based on current selections
        function updateOptionAvailability() {
          // Get current selections
          const currentSelections = {};
          document.querySelectorAll('input[name^="option-"]:checked').forEach((input) => {
            const optionPosition = parseInt(input.name.match(/option-(\d+)/)[1]) - 1;
            currentSelections[optionPosition] = input.value.trim().toLowerCase();
          });

          // For each option position, check which values are still available
          const optionPositions = Object.keys(optionGroups).map(pos => parseInt(pos) - 1);
          
          optionPositions.forEach((checkPosition) => {
            optionGroups[(checkPosition + 1).toString()].forEach((input) => {
              const optionValue = input.value.trim().toLowerCase();
              const label = document.querySelector(`label[for="${input.id}"]`);

              // Check if this option value can be combined with current selections
              let isAvailable = false;
              
              // If no selections made yet, check if option exists in any variant
              if (Object.keys(currentSelections).length === 0) {
                const positionOptions = availableOptionsByPosition[checkPosition];
                isAvailable = positionOptions && positionOptions.has(optionValue);
              } else {
                // Check against available variants that match current selections
                variantData.variants.forEach((variant) => {
                  if (variant.available) {
                    // Check if this variant matches all current selections
                    let matches = true;
                    for (const [pos, selectedValue] of Object.entries(currentSelections)) {
                      const variantOption = [variant.option1, variant.option2, variant.option3][pos];
                      if (parseInt(pos) !== checkPosition && variantOption && variantOption.toLowerCase() !== selectedValue) {
                        matches = false;
                        break;
                      }
                    }
                    
                    // If it matches current selections and has this option value at the check position
                    const checkOption = [variant.option1, variant.option2, variant.option3][checkPosition];
                    if (matches && checkOption && checkOption.toLowerCase() === optionValue) {
                      isAvailable = true;
                    }
                  }
                });
              }

              if (!isAvailable) {
                input.disabled = true;
                if (label) {
                  label.classList.add('option-unavailable');
                  label.style.pointerEvents = 'none';
                }
              } else {
                input.disabled = false;
                if (label) {
                  label.classList.remove('option-unavailable');
                  label.style.pointerEvents = 'auto';
                }
              }
            });
          });
        }

        // Add event listeners for variant products with dynamic updating
        document.querySelectorAll('input[name^="option-"]').forEach((input) => {
          input.addEventListener('change', () => {
            updateOptionAvailability();
            updateVariant();
          });
        });

        // Initial option availability update
        updateOptionAvailability();
      } else {
        console.log('üéÅ Simple product (no variants) detected');
      }

      // Simple variant update function (works for both types)
      function updateVariant() {
        if (hasVariantOptions) {
          // Get all currently selected options
          const selectedOptions = [];
          document.querySelectorAll('input[name^="option-"]:checked').forEach((input) => {
            const optionPosition = parseInt(input.name.match(/option-(\d+)/)[1]) - 1; // 0-based index
            selectedOptions[optionPosition] = input.value.trim().toLowerCase();
          });

          // If we don't have selections for all option positions, don't update yet
          const uniquePositions = variantData.options.length;
          
          if (selectedOptions.length < uniquePositions) {
            return; // Not all options selected yet
          }

          // Find matching variant
          const matchingVariant = variantData.variants.find((variant) => {
            if (!variant.available) return false;
            
            // Check if all selected options match this variant
            const variantOptions = [variant.option1, variant.option2, variant.option3]
              .slice(0, uniquePositions)
              .map(opt => opt ? opt.toLowerCase() : '');
            
            return selectedOptions.every((selected, index) => variantOptions[index] === selected);
          });

          if (matchingVariant) {
            // Update the hidden select if it exists
            const variantSelector = document.querySelector('.variant-selector');
            if (variantSelector) {
              variantSelector.value = matchingVariant.id;
            }

            // Update price using the pre-rendered price HTML
            const priceElement = document.querySelector('.product-price');
            if (priceElement && matchingVariant.priceHtml) {
              priceElement.innerHTML = matchingVariant.priceHtml;
            }

            // Update button
            const addToCartBtn = document.querySelector('.add-to-cart-btn');
            if (addToCartBtn) {
              addToCartBtn.disabled = !matchingVariant.available;
              const btnText = addToCartBtn.querySelector('.btn-text');
              if (btnText) {
                btnText.textContent = !matchingVariant.available
                  ? window.themeStrings?.sold_out || 'Sold out'
                  : window.themeStrings?.add_to_cart || 'Add to cart';
              }
            }

            console.log('Updated to variant:', matchingVariant.title, 'with options:', selectedOptions);
          } else {
            console.log('No matching variant found for options:', selectedOptions);
          }
        }
        // For simple products, variant selector is already set correctly
      }

      // Initial update
      updateVariant();

      console.log('‚úÖ Variant selection initialized');
    }

    // Initialize variant selection
    initVariantSelection();

    // AJAX Add to Cart Functionality - Works for ALL products
    const productForm = document.querySelector('form[action*="/cart/add"]');
    const cartMessage = document.querySelector('.cart-message');

    console.log('üõí Add to cart form found:', !!productForm);

    if (productForm) {
      console.log('‚úÖ Setting up AJAX add to cart for all products');
      productForm.addEventListener('submit', function (e) {
        e.preventDefault();

        console.log('üõí Adding product to cart via AJAX...');

        const formData = new FormData(productForm);
        const addButton = productForm.querySelector('.add-to-cart-btn');
        const btnText = addButton.querySelector('.btn-text');
        const originalText = btnText.textContent;

        // Show loading state
        addButton.disabled = true;
        btnText.textContent = window.themeStrings?.adding || 'Adding...';

        // Hide previous messages
        if (cartMessage) {
          cartMessage.style.display = 'none';
          cartMessage.className = 'cart-message';
        }

        // Use the global cart update function if available, otherwise fallback to direct fetch
        const addToCartPromise = window.addToCartAndUpdate
          ? window.addToCartAndUpdate(formData)
          : fetch('/cart/add.js', { method: 'POST', body: formData }).then((r) => r.json());

        addToCartPromise
          .then((data) => {
            // Success
            if (cartMessage) {
              cartMessage.className = 'cart-message success';
              cartMessage.textContent = window.themeStrings?.added_to_cart || 'Product added to cart successfully!';
              cartMessage.style.display = 'block';
            }

            // Reset button
            addButton.disabled = false;
            btnText.textContent = originalText;

            // Hide message after 3 seconds
            setTimeout(() => {
              if (cartMessage) {
                cartMessage.style.display = 'none';
              }
            }, 3000);
          })
          .catch((error) => {
            // Error
            if (cartMessage) {
              cartMessage.className = 'cart-message error';
              cartMessage.textContent =
                window.themeStrings?.error_adding_to_cart || 'Error adding product to cart. Please try again.';
              cartMessage.style.display = 'block';
            }

            // Reset button
            addButton.disabled = false;
            btnText.textContent = originalText;
          });
      });
    }

    console.log('üèÅ ALL PRODUCT PAGE SCRIPTS LOADED SUCCESSFULLY!');
  });
