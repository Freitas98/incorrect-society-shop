                                  <div class="size-row">
                                    <span>S</span>
                                    <span>{% render 'size-measurements', garment: 'hoodie', size: 's', point: 'a', unit: 'inches' %}</span>
                                    <span>{% render 'size-measurements', garment: 'hoodie', size: 's', point: 'b', unit: 'inches' %}</span>
                                    <span>{% render 'size-measurements', garment: 'hoodie', size: 's', point: 'c', unit: 'inches' %}</span>
                                  </div>
                                  <div class="size-row">
                                    <span>M</span>
                                    <span>{% render 'size-measurements', garment: 'hoodie', size: 'm', point: 'a', unit: 'inches' %}</span>
                                    <span>{% render 'size-measurements', garment: 'hoodie', size: 'm', point: 'b', unit: 'inches' %}</span>
                                    <span>{% render 'size-measurements', garment: 'hoodie', size: 'm', point: 'c', unit: 'inches' %}</span>
                                  </div>
                                  <div class="size-row">
                                    <span>L</span>
                                    <span>{% render 'size-measurements', garment: 'hoodie', size: 'l', point: 'a', unit: 'inches' %}</span>
                                    <span>{% render 'size-measurements', garment: 'hoodie', size: 'l', point: 'b', unit: 'inches' %}</span>
                                    <span>{% render 'size-measurements', garment: 'hoodie', size: 'l', point: 'c', unit: 'inches' %}</span>
                                  </div>
