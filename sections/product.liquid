                                    <span>{% render 'size-measurements', garment: 'tshirt', size: 'xl', point: 'a', unit: 'inches' %}</span>
                                    <span>{% render 'size-measurements', garment: 'tshirt', size: 'xl', point: 'b', unit: 'inches' %}</span>
