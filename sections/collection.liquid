{% comment %}
  This section is used in the collection template to render collection page
  listing all products within a collection.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/collection
{% endcomment %}

<div class="collection-section">
  <div class="collection-header">
    <div class="collection-header-inner">
      <h1 class="collection-title">{{ collection.title }}</h1>
      {% if collection.description != blank %}
        <div class="collection-description">{{ collection.description }}</div>
      {% endif %}
    </div>
    <div class="collection-separator"></div>
  </div>

  <div class="collection-products">
    {% paginate collection.products by 12 %}
      {% for product in collection.products %}
        <div class="product-card">
          <a href="{{ product.url }}" class="product-link">
            <div class="product-image">
              {% if product.featured_media %}
                <img
                  src="{{ product.featured_media | image_url: width: 400 }}"
                  alt="{{ product.featured_media.alt | escape }}"
                  width="400"
                  height="400"
                  loading="lazy"
                >
              {% else %}
                <div class="product-image-placeholder">No Image</div>
              {% endif %}
            </div>

            <div class="product-info">
              <h3 class="product-title">{{ product.title }}</h3>
              {% if product.available %}
                {% if product.gift_card? or product.type == 'Gift Card' %}
                  <p class="product-price">
                    {{ 'gift_card.start_at' | t }}
                    {% render 'price', amount: product.price, product: product %}
                  </p>
                {% else %}
                  <p class="product-price">{% render 'price', amount: product.price, product: product %}</p>
                {% endif %}
              {% else %}
                <p class="product-price product-out-of-stock">{{ 'products.product.sold_out' | t }}</p>
              {% endif %}
            </div>
          </a>
        </div>
      {% endfor %}

      {{ paginate | default_pagination }}
    {% endpaginate %}
  </div>
</div>

{% stylesheet %}
  .collection-section {
    padding: 40px 20px;
    color: var(--color-foreground);
    width: 100%;
    max-width: 100vw;
  }

  .collection-header {
    margin-bottom: 40px;
    width: 100%;
  }

  .collection-header-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 20px;
    margin-bottom: 30px;
    text-align: center;
    width: 100%;
  }

  .collection-separator {
    width: calc(100% + 40px);
    margin-left: -20px;
    margin-right: -20px;
    height: 1px;
    background-color: var(--color-foreground);
    opacity: 0.2;
    margin-top: 0;
    margin-bottom: 0;
  }

  .collection-description {
    margin: 0;
    max-width: 600px;
    color: var(--color-foreground);
    opacity: 0.9;
    line-height: 1.6;
  }

  .collection-title {
    font-size: 32px;
    font-weight: var(--font-heading-weight);
    text-transform: uppercase;
    letter-spacing: var(--font-heading-letter-spacing);
    color: var(--color-foreground);
    margin: 0;
  }

  .collection-products {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    width: 100%;
    margin: 0 auto;
    max-width: 1400px;
  }

  .product-card {
    background-color: transparent;
    width: calc(25% - 15px);
    min-width: 0;
  }

  .product-link {
    display: block;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease;
  }

  .product-link:hover {
    transform: translateY(-5px);
    color: var(--color-primary);
  }

  .product-image {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    margin-bottom: 20px;
    background-color: transparent;
    overflow: hidden;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.3s ease;
    transform: scale(0.9);
  }

  .product-link:hover .product-image img {
    transform: scale(1);
  }

  .product-image-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-background);
    color: var(--color-border);
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .product-info {
    text-align: center;
  }

  .product-title {
    font-size: 14px;
    font-weight: var(--font-heading-weight);
    text-transform: uppercase;
    letter-spacing: var(--font-heading-letter-spacing);
    margin: 0 0 10px 0;
    color: var(--color-foreground);
    line-height: 1.4;
  }

  .product-price {
    font-size: 14px;
    color: var(--color-foreground);
    font-weight: var(--font-heading-weight);
    margin: 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .product-out-of-stock {
    color: var(--color-border);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  /* Pagination styling */
  .pagination {
    display: flex;
    justify-content: center;
    margin-top: 60px;
    gap: 10px;
  }

  .pagination a,
  .pagination span {
    padding: 10px 15px;
    color: var(--color-foreground);
    text-decoration: none;
    border: 1px solid var(--color-border);
    transition: all 0.3s ease;
  }

  .pagination a:hover {
    background-color: transparent;
    border-color: var(--color-primary);
    color: var(--color-primary);
  }

  .pagination .current {
    background-color: transparent;
    border-color: var(--color-primary);
    color: var(--color-primary);
  }

  /* Desktop Header Layout */
  @media (min-width: 1025px) {
    .collection-header-inner {
      flex-direction: row;
      flex-wrap: wrap;
      gap: 95px;
      justify-content: center;
      text-align: left;
    }
    
    .collection-description {
      text-align: left;
      max-width: 600px;
    }
  }

  /* Responsive Design */
  @media (max-width: 1200px) {
    .product-card {
      width: calc(33.333% - 14px);
    }
  }

  @media (max-width: 1024px) {
    .collection-section {
      padding: 40px 20px;
    }

    .collection-header {
      margin-bottom: 40px;
    }

    .collection-title {
      font-size: 24px;
    }
  }

  @media (max-width: 768px) {
    .product-card {
      width: calc(50% - 10px);
    }

    .collection-title {
      font-size: 20px;
      letter-spacing: 1px;
    }
  }

  @media (max-width: 480px) {
    .product-card {
      width: 100%;
    }

    .collection-section {
      padding: 20px;
    }
  }
{% endstylesheet %}

