{% stylesheet %}
  .policy-page {
    background-color: var(--color-background);
    color: var(--color-foreground);
    padding: 60px 20px;
    max-width: 800px;
    margin: 0 auto;
    min-height: 100vh;
    line-height: 1.7;
  }

  .policy-title {
    text-align: center;
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 50px;
    color: var(--color-foreground);
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  .policy-content {
    border-radius: 8px;
    padding: 40px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
  }

  .policy-content h2 {
    color: var(--color-foreground);
    font-size: 1.5rem;
    margin-top: 30px;
    margin-bottom: 15px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .policy-content h2:first-child {
    margin-top: 0;
  }

  .policy-content p {
    margin-bottom: 20px;
    color: var(--color-foreground);
    opacity: 0.85;
    font-size: 1rem;
  }

  .policy-content ul {
    margin-bottom: 20px;
    padding-left: 20px;
  }

  .policy-content li {
    margin-bottom: 10px;
    color: var(--color-foreground);
    opacity: 0.85;
  }

  .policy-content strong {
    color: var(--color-foreground);
  }

  .policy-highlight {
    background-color: var(--color-surface);
    color: var(--color-foreground);
    padding: 20px;
    border-radius: 5px;
    margin: 30px 0;
    font-weight: 500;
  }

  /* Utility for inline red highlights */
  .policy-accent {
    color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .policy-page {
      padding: 40px 15px;
    }

    .policy-title {
      font-size: 2rem;
      margin-bottom: 30px;
    }

    .policy-content {
      padding: 30px 20px;
    }

    .policy-content h2 {
      font-size: 1.3rem;
    }
  }
{% endstylesheet %}

<div class="policy-page">
  {% assign translated_title = page.title %}
  {% if page.handle == 'shipping-policy' %}
    {% assign translated_title = 'policies.shipping_policy' | t %}
  {% elsif page.handle == 'terms-of-service' %}
    {% assign translated_title = 'policies.terms_of_service' | t %}
  {% elsif page.handle == 'return-policy' %}
    {% assign translated_title = 'policies.return_policy' | t %}
  {% elsif page.handle == 'newsletter' %}
    {% assign translated_title = 'policies.newsletter' | t %}
  {% elsif page.handle == 'contact-us' %}
    {% assign translated_title = 'policies.contact_us' | t %}
  {% endif %}
  <h1 class="policy-title">{{ translated_title }}</h1>

  <div class="policy-content">
    {% if page.handle == 'shipping-policy' %}
      {% render 'shipping-policy-content' %}
    {% elsif page.handle == 'terms-of-service' %}
      {% render 'terms-of-service-content' %}
    {% elsif page.handle == 'return-policy' %}
      {% render 'return-policy-content' %}
    {% elsif page.handle == 'newsletter' %}
      {% render 'newsletter-content' %}
    {% elsif page.handle == 'contact-us' %}
      {% render 'contact-us-content' %}
    {% else %}
      {{ page.content }}
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Policy Page",
  "tag": "section",
  "class": "shopify-section-policy-page",
  "settings": []
}
{% endschema %}
