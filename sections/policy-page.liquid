{% stylesheet %}
  .policy-page {
    background-color: var(--color-background);
    color: var(--color-foreground);
    padding: 80px 20px;
    max-width: 700px;
    margin: 0 auto;
    min-height: 100vh;
    line-height: 1.8;
  }

  .policy-title {
    text-align: left;
    font-size: 2rem;
    font-weight: var(--font-heading-weight);
    margin-bottom: 40px;
    color: var(--color-title, #000000);
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .policy-content {
    padding: 0;
    margin: 0;
    background-color: transparent;
    box-shadow: none;
  }

  .policy-content h2 {
    color: var(--color-title, #000000);
    font-size: 1.1rem;
    font-weight: var(--font-heading-weight);
    margin-top: 40px;
    margin-bottom: 15px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .policy-content h2:first-child {
    margin-top: 0;
  }

  .policy-content p {
    margin-bottom: 20px;
    color: var(--color-description, #555555);
    font-size: 0.95rem;
  }

  .policy-content ul {
    margin-bottom: 20px;
    padding-left: 20px;
  }

  .policy-content li {
    margin-bottom: 10px;
    color: var(--color-description, #555555);
  }

  .policy-content strong {
    color: var(--color-title, #000000);
  }

  .policy-highlight {
    background-color: var(--color-surface);
    color: var(--color-foreground);
    padding: 20px;
    border-radius: 4px;
    margin: 30px 0;
    font-weight: 500;
    border-left: 3px solid var(--color-primary);
  }

  /* Utility for inline red highlights */
  .policy-accent {
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .policy-page {
      padding: 40px 20px;
    }

    .policy-title {
      font-size: 1.6rem;
      margin-bottom: 30px;
    }

    .policy-content h2 {
      font-size: 1rem;
    }
  }
{% endstylesheet %}

<div class="policy-page">
  {% assign translated_title = page.title %}
  {% if page.handle == 'shipping-policy' %}
    {% assign translated_title = 'policies.shipping_policy' | t %}
  {% elsif page.handle == 'terms-of-service' %}
    {% assign translated_title = 'policies.terms_of_service' | t %}
  {% elsif page.handle == 'return-policy' %}
    {% assign translated_title = 'policies.return_policy' | t %}
  {% elsif page.handle == 'newsletter' %}
    {% assign translated_title = 'policies.newsletter' | t %}
  {% elsif page.handle == 'contact-us' %}
    {% assign translated_title = 'policies.contact_us' | t %}
  {% endif %}
  <h1 class="policy-title">{{ translated_title }}</h1>

  <div class="policy-content">
    {% if page.handle == 'shipping-policy' %}
      {% render 'shipping-policy-content' %}
    {% elsif page.handle == 'terms-of-service' %}
      {% render 'terms-of-service-content' %}
    {% elsif page.handle == 'return-policy' %}
      {% render 'return-policy-content' %}
    {% elsif page.handle == 'newsletter' %}
      {% render 'newsletter-content' %}
    {% elsif page.handle == 'contact-us' %}
      {% render 'contact-us-content' %}
    {% else %}
      {{ page.content }}
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Policy Page",
  "tag": "section",
  "class": "shopify-section-policy-page",
  "settings": []
}
{% endschema %}
