<style>
  .size-guide-container {
    background-color: var(--color-background);
    color: var(--color-foreground);
    padding: 60px 20px;
    max-width: 1200px;
    margin: 0 auto;
    min-height: 100vh;
  }

  .size-guide-title {
    text-align: center;
    font-size: 3rem;
    font-weight: var(--font-heading-weight);
    margin-bottom: 60px;
    color: var(--color-foreground);
    letter-spacing: var(--font-heading-letter-spacing);
    text-transform: uppercase;
  }

  .size-table-section {
    margin-bottom: 50px;
    background-color: var(--color-surface);
    border-radius: 8px;
    padding: 30px;
  }

  .size-table-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
  }

  .table-with-diagram {
    display: flex;
    align-items: center;
    gap: 40px;
  }

  /* When content doesn't fit, stack diagram below */
  .table-with-diagram.stacked {
    flex-direction: column;
    gap: 20px;
  }
  .table-with-diagram.stacked .garment-diagram {
    width: 100%;
  }

  .table-container {
    flex: 1;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    overscroll-behavior-x: contain;
    position: relative;
  }

  .table-title {
    font-size: 1.8rem;
    font-weight: var(--font-heading-weight);
    color: var(--color-foreground);
    letter-spacing: var(--font-heading-letter-spacing);
    text-transform: uppercase;
  }

  .unit-tabs {
    display: flex;
    background-color: var(--color-surface);
    border-radius: 5px;
    padding: 5px;
  }

  .unit-tab {
    padding: 10px 20px;
    background-color: transparent;
    color: var(--color-foreground);
    opacity: 0.8;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: var(--font-heading-weight);
    letter-spacing: var(--font-heading-letter-spacing);
    text-transform: uppercase;
  }

  .unit-tab.active {
    background-color: var(--color-primary);
    color: var(--color-foreground);
    border-radius: 3px;
  }

  /* Center the global unit tabs */
  .size-table-header--global {
    justify-content: center;
    align-items: center;
  }

  /* Mobile stacked list for measurements */
  .mobile-size-list {
    display: none;
  }
  .size-list-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 16px;
  }
  .mobile-size-card {
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 16px;
    background: var(--color-surface);
    margin-bottom: 12px;
    flex: 1 1 260px;
    max-width: 360px;
    flex-direction: column;
    display: flex;
    align-items: center;
  }
  .mobile-size-card__title {
    display: flex;
    align-items: center;
    gap: 8px;
    font-weight: var(--font-heading-weight);
    margin-bottom: 8px;
    text-transform: uppercase;
  }
  .mobile-size-card__badge {
    border: 1px solid var(--color-border);
    border-radius: 999px;
    padding: 2px 10px;
    font-size: 0.85rem;
    background: var(--color-background);
    color: var(--color-foreground);
  }
  .mobile-size-measurements {
    display: grid;
    grid-template-columns: auto 1fr;
    column-gap: 12px;
    row-gap: 6px;
    font-size: 0.95rem;
  }
  .mobile-size-measurements dt {
    color: var(--color-primary);
    font-weight: var(--font-heading-weight);
  }

  .size-table {
    width: 100%;
    border-collapse: collapse;
    background-color: var(--color-surface);
    border-radius: 8px;
    overflow: hidden;
  }

  .size-table th {
    background-color: var(--color-background);
    color: var(--color-foreground);
    padding: 20px;
    text-align: center;
    font-weight: var(--font-heading-weight);
    border: 1px solid var(--color-border);
    font-size: 1.3rem;
    letter-spacing: var(--font-heading-letter-spacing);
    text-transform: uppercase;
    min-width: 120px;
  }

  .size-table td {
    padding: 20px;
    text-align: center;
    border: 1px solid var(--color-border);
    color: var(--color-foreground);
    font-weight: var(--font-heading-weight);
    font-size: 1.1rem;
    min-width: 120px;
  }

  .size-table tr:nth-child(even) {
    background-color: color-mix(in oklab, var(--color-surface), var(--color-background) 50%);
  }

  .size-table tr:nth-child(odd) {
    background-color: var(--color-surface);
  }

  .size-table tr:hover {
    background-color: color-mix(in oklab, var(--color-primary), var(--color-background) 75%);
  }

  .measurement-point {
    background-color: var(--color-background) !important;
    color: var(--color-primary);
    font-weight: var(--font-heading-weight);
    font-size: 1.3rem;
  }

  .measurement-note {
    text-align: center;
    color: var(--color-foreground);
    opacity: 0.8;
    font-style: italic;
    margin-top: 30px;
    font-size: 0.9rem;
    letter-spacing: var(--font-body-letter-spacing);
  }

  .garment-diagram {
    text-align: center;
    flex-shrink: 0;
    margin: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .diagram-image {
    max-width: 280px;
    height: auto;
    opacity: 0.9;
  }

