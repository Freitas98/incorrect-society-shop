      margin-bottom: 40px;
    }

    .size-table-header {
      flex-direction: column;
      gap: 20px;
      align-items: flex-start;
    }

    .table-title {
      font-size: 1.5rem;
    }

    .size-table {
      font-size: 0.9rem;
    }

    .size-table th,
    .size-table td {
      padding: 15px 8px;
    }

    .unit-tab {
      padding: 8px 16px;
      font-size: 0.9rem;
    }

    .garment-diagram {
      width: 100%;
    }
    .diagram-image {
      max-width: min(80vw, 320px);
    }
  }

