<script>
  // Stack diagrams below tables when content overflows
  const updateDiagramStacking = () => {
    const wrappers = document.querySelectorAll('.table-with-diagram');
    for (const wrap of wrappers) {
      const container = wrap.querySelector('.table-container');
      if (!container) continue;
      const style = window.getComputedStyle(container);
      const hidden = style.display === 'none' || style.visibility === 'hidden';
      if (hidden) { wrap.classList.remove('stacked'); continue; }
      const needsStack = container.scrollWidth > container.clientWidth;
      if (needsStack) wrap.classList.add('stacked');
      else wrap.classList.remove('stacked');
    }
  };
  let resizeTO;
  const onResize = () => {
    clearTimeout(resizeTO);
    resizeTO = setTimeout(updateDiagramStacking, 100);
  };
  document.addEventListener('DOMContentLoaded', () => {
    updateDiagramStacking();
    window.addEventListener('resize', onResize);
  });

  function switchAllUnits(unit) {
    // Remove active class from all tabs
    const tabs = document.querySelectorAll('.unit-tab');
    tabs.forEach(tab => {
      tab.classList.remove('active');
      tab.setAttribute('aria-pressed', 'false');
    });

    // Add active class to the clicked unit tabs
  const activeTabs = document.querySelectorAll('.unit-tab');
  activeTabs.forEach(tab => {
      if ((unit === 'cm' && tab.textContent.trim() === '{{ 'size_guide.cm' | t }}') ||
          (unit === 'inches' && tab.textContent.trim() === '{{ 'size_guide.inches' | t }}')) {
    tab.classList.add('active');
    tab.setAttribute('aria-pressed', 'true');
      }
    });

    // Switch T-shirt table units
    const tshirtCmBody = document.getElementById('tshirt-cm');
    const tshirtInchesBody = document.getElementById('tshirt-inches');
  const tshirtListCm = document.getElementById('tshirt-list-cm');
  const tshirtListInches = document.getElementById('tshirt-list-inches');

    // Switch Hoodie table units
    const hoodieCmBody = document.getElementById('hoodie-cm');
    const hoodieInchesBody = document.getElementById('hoodie-inches');
  const hoodieListCm = document.getElementById('hoodie-list-cm');
  const hoodieListInches = document.getElementById('hoodie-list-inches');

    // Switch measurement note
    const noteCm = document.getElementById('measurement-note-cm');
    const noteInches = document.getElementById('measurement-note-inches');

    if (unit === 'cm') {
      // Show CM, hide inches for both tables
      tshirtCmBody.style.display = 'table-row-group';
      tshirtInchesBody.style.display = 'none';
  if (tshirtListCm) tshirtListCm.style.display = 'flex';
  if (tshirtListInches) tshirtListInches.style.display = 'none';
      hoodieCmBody.style.display = 'table-row-group';
      hoodieInchesBody.style.display = 'none';
  if (hoodieListCm) hoodieListCm.style.display = 'flex';
  if (hoodieListInches) hoodieListInches.style.display = 'none';
      noteCm.style.display = 'block';
      noteInches.style.display = 'none';
    } else {
      // Show inches, hide CM for both tables
      tshirtCmBody.style.display = 'none';
      tshirtInchesBody.style.display = 'table-row-group';
  if (tshirtListCm) tshirtListCm.style.display = 'none';
  if (tshirtListInches) tshirtListInches.style.display = 'flex';
      hoodieCmBody.style.display = 'none';
      hoodieInchesBody.style.display = 'table-row-group';
  if (hoodieListCm) hoodieListCm.style.display = 'none';
  if (hoodieListInches) hoodieListInches.style.display = 'flex';
      noteCm.style.display = 'none';
      noteInches.style.display = 'block';
    }
  }
</script>

