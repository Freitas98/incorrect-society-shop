{% liquid
  assign collections_id = 'collections-grid-' | append: section.id
%}

<section class="collections-page">
  <div class="collections-page__inner">
    <header class="collections-page__header">
      {% if section.settings.heading != blank %}
        <h1 class="collection-title">{{ section.settings.heading }}</h1>
      {% else %}
        <h1 class="collection-title">{{ 'collections.title' | t }}</h1>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p class="collection-description">{{ section.settings.subheading }}</p>
      {% endif %}
    </header>

    <div
      id="{{ collections_id }}"
      class="collections-grid"
      style="--collections-gap: {{ section.settings.grid_gap }}px;"
    >
      {% for collection in collections %}
        <article class="collection-card">
          <a class="collection-card__link" href="{{ collection.url }}">
            <div class="collection-card__media">
              {% if collection.featured_image %}
                {% render 'image',
                  class: 'collection-card__image',
                  image: collection.featured_image,
                  width: 900,
                  height: 600,
                %}
              {% else %}
                <div class="collection-card__placeholder">{{ 'general.no_image' | t }}</div>
              {% endif %}
              <span class="collection-card__overlay"></span>
              {% if section.settings.show_counts %}
                <span class="collection-card__badge">
                  {{ collection.all_products_count }}
                  {{ collection.all_products_count | pluralize: 'item', 'items' }}
                </span>
              {% endif %}
            </div>

            <div class="collection-card__body">
              <h2 class="collection-card__title">{{ collection.title }}</h2>

              {% if section.settings.show_description and collection.description != blank %}
                <p class="collection-card__excerpt">
                  {{ collection.description | strip_html | truncatewords: 18 }}
                </p>
              {% elsif section.settings.show_counts %}
                <p class="collection-card__excerpt collection-card__excerpt--muted">
                  Explore {{ collection.title | downcase }}
                </p>
              {% endif %}
            </div>
          </a>
        </article>
      {% endfor %}
    </div>
  </div>
</section>

{% comment %} Styles moved to assets/theme-sections.css {% endcomment %}

{% schema %}
{
  "name": "t:general.collections_grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Collections"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Intro copy",
      "default": "Move through curated drops, limited capsules, and core staples. Pick your world and stay incorrect."
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show collection description excerpt",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_counts",
      "label": "Show product counts",
      "default": true
    },
    {
      "type": "range",
      "id": "grid_gap",
      "label": "t:labels.grid_gap",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "default": 10
    }
  ],
  "presets": [{ "name": "t:general.collections_grid" }]
}
{% endschema %}
