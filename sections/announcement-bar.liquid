<div class="announcement-bar">
  {% liquid
    assign default_text = 'announcement.default' | t | default: 'WORLDWIDE SHIPPING | OUTSIDER OUT NOW | FREE SHIPPING 80€+'
    assign setting_text = section.settings.announcement_text | strip
    assign announcement_text = default_text
    if section.settings.use_translated_default == false and setting_text != blank
      assign announcement_text = setting_text
    endif
  %}
  {% capture announcement_block %}
    <span class="announcement-text">
      <img src="https://cdn.shopify.com/s/files/1/0954/9840/4181/files/Logo_white.svg?v=1764257556" class="announcement-icon" alt="" width="60" height="60">
      <span class="announcement-copy">{{ announcement_text }}</span>
      <img src="https://cdn.shopify.com/s/files/1/0954/9840/4181/files/Logo_white.svg?v=1764257556" class="announcement-icon" alt="" width="60" height="60">
    </span>
  {% endcapture %}
  <div class="announcement-content" aria-label="{{ 'announcement.aria_label' | t | default: 'Store announcement' }}">
    {{ announcement_block }}
    <span class="announcement-spacer"></span>
    {{ announcement_block }}
    <span class="announcement-spacer"></span>
    {{ announcement_block }}
  </div>
</div>

{% stylesheet %}
  .announcement-bar {
    background-color: #B21B24;
    color: #ffffff;
    height: 30px;
    overflow: hidden;
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    z-index: 1000;
  }

  .announcement-content {
    position: absolute;
    white-space: nowrap;
    animation: scroll-left 32s linear infinite;
    line-height: 30px;
    font-weight: var(--font-heading-weight);
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: var(--font-heading-letter-spacing);
    width: max-content;
    text-rendering: geometricPrecision;
  }

  .announcement-text {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    color: white;
  }

  .announcement-icon {
    width: 32px;
    height: 32px;
    object-fit: contain;
    display: inline-block;
  }

  .announcement-spacer {
    display: inline-block;
    width: 220px;
  }

  @keyframes scroll-left {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  /* Pause animation on hover */
  .announcement-bar:hover .announcement-content {
    animation-play-state: paused;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "use_translated_default",
      "label": "Use translated default",
      "default": true
    },
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Custom text (overrides)",
      "default": " WORLDWIDE SHIPPING | OUTSIDER OUT NOW | FREE SHIPPING 80€+ IN PORTUGAL"
    }
  ]
}
{% endschema %}
