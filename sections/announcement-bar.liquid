<div class="announcement-bar">
  {% liquid
    assign default_text = 'announcement.default' | t | default: 'WORLDWIDE SHIPPING | OUTSIDER OUT NOW | FREE SHIPPING 80€+'
    assign setting_text = section.settings.announcement_text | strip
    assign announcement_text = default_text
    if section.settings.use_translated_default == false and setting_text != blank
      assign announcement_text = setting_text
    endif
  %}
  {% capture announcement_block %}
    <span class="announcement-text">
      <span class="announcement-dot" aria-hidden="true"></span>
      <span class="announcement-copy">{{ announcement_text }}</span>
      <span class="announcement-dot" aria-hidden="true"></span>
    </span>
  {% endcapture %}
  <div class="announcement-content" aria-label="{{ 'announcement.aria_label' | t | default: 'Store announcement' }}">
    {{ announcement_block }}
    <span class="announcement-spacer"></span>
    {{ announcement_block }}
    <span class="announcement-spacer"></span>
    {{ announcement_block }}
  </div>
</div>

{% stylesheet %}
  .announcement-bar {
    background-color: var(--color-background);
    color: var(--color-foreground);
    height: 46px;
    overflow: hidden;
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    border-bottom: 1px solid var(--color-border);
    z-index: 1000;
  }

  .announcement-content {
    position: absolute;
    white-space: nowrap;
    animation: scroll-left 32s linear infinite;
    line-height: 46px;
    font-weight: 500;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.35em;
    width: max-content;
    text-rendering: geometricPrecision;
    mask-image: linear-gradient(90deg, transparent 0%, #000 12%, #000 88%, transparent 100%);
  }

  .announcement-text {
    display: inline-flex;
    align-items: center;
    gap: 12px;
  }

  .announcement-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: var(--color-primary);
    display: inline-flex;
  }

  .announcement-spacer {
    display: inline-block;
    width: 220px;
  }

  @keyframes scroll-left {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  /* Pause animation on hover */
  .announcement-bar:hover .announcement-content {
    animation-play-state: paused;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "use_translated_default",
      "label": "Use translated default",
      "default": true
    },
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Custom text (overrides)",
      "default": " WORLDWIDE SHIPPING | OUTSIDER OUT NOW | FREE SHIPPING 80€+ IN PORTUGAL"
    }
  ]
}
{% endschema %}
