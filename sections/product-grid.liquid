{% comment %}
  Product Grid Section - 3 items per row
{% endcomment %}


<div class="product-grid-section">
  <div class="collection-header">
    <div class="collection-controls">
      <div class="filters">
        <label for="filter-availability">Filter by availability:</label>
        <select id="filter-availability" name="filter_availability">
          <option value="" {% if filter_availability == '' %}selected{% endif %}>All</option>
          <option value="available" {% if filter_availability == 'available' %}selected{% endif %}>Available</option>
          <option value="sold_out" {% if filter_availability == 'sold_out' %}selected{% endif %}>Sold Out</option>
        </select>
      </div>
      <div class="sorting">
        <label for="sort-by">Sort by:</label>
        <select id="sort-by" name="sort_by">
          <option value="title-ascending">Alphabetical (A-Z)</option>
          <option value="title-descending">Alphabetical (Z-A)</option>
          <option value="price-ascending">Price (Low to High)</option>
          <option value="price-descending">Price (High to Low)</option>
          <option value="created-ascending">Oldest</option>
          <option value="created-descending">Newest</option>
        </select>
      </div>
    </div>
  </div>
  <div class="product-grid-title">
    <h2 class="shop-name">{{ shop.name }}</h2>
    <p class="product-count">{{ collections.all.products_count }} products</p>
  </div>
  <div class="product-grid">
    {% for product in collections.all.products %}
      {% liquid
        assign exclude_handle = 'gift-cards'
        assign in_excluded = false
      %}
      {% for c in product.collections %}
        {% if c.handle == exclude_handle %}
          {% assign in_excluded = true %}
          {% break %}
        {% endif %}
      {% endfor %}
      {% if in_excluded or product.gift_card? or product.type == 'Gift Card' %}{% continue %}{% endif %}
      {% if filter_availability == 'available' and product.available == false %}{% continue %}{% endif %}
      {% if filter_availability == 'sold_out' and product.available == true %}{% continue %}{% endif %}
      <div class="product-card" data-title="{{ product.title | downcase }}" data-price="{{ product.price | times: 1 }}" data-created="{{ product.created_at | date: '%s' }}">
        <a href="{{ product.url }}" class="product-link">
          <div class="product-image">
            {% if product.featured_media %}
              <img
                src="{{ product.featured_media | image_url: width: 400 }}"
                alt="{{ product.featured_media.alt | escape }}"
                width="400"
                height="400"
                loading="lazy"
              >
            {% else %}
              <div class="product-image-placeholder">No Image</div>
            {% endif %}
          </div>

          <div class="product-info">
            <h3 class="product-title">{{ product.title }}</h3>
            {% if product.available %}
              <p class="product-price">{% render 'price', amount: product.price, product: product %}</p>
            {% else %}
              <p class="product-price product-out-of-stock">{{ 'products.product.sold_out' | t }}</p>
            {% endif %}
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

{% stylesheet %}
  .product-grid-section {
    padding: 60px 40px;
    color: var(--color-foreground);
  }

  .product-grid-title {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    margin: 0 0 40px;
    font-size: 28px;
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  .product-title {
    display: flex;
    justify-content: center;
  }

  .product-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 40px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .product-card {
    background-color: transparent;
    width: calc(33.333% - 27px); /* 3 columns with gap */
    min-width: 300px;
  }

  .product-card--promo {
    width: calc(33.333% - 27px);
  }

  .product-image--promo img {
    object-fit: cover;
    transform: scale(1);
  }

  .product-card--banner {
    width: 100%;
  }

  .product-image--banner {
    aspect-ratio: 16/6;
    background-color: transparent;
  }

  /* When fewer than 3 items, they'll be centered automatically */
  @media (max-width: 1024px) {
    .product-card {
      width: calc(50% - 20px); /* 2 columns on tablet */
      min-width: 280px;
    }
    .product-card--promo {
      width: calc(50% - 20px);
    }
    .product-card--banner .product-image--banner {
      aspect-ratio: 16/8;
    }
  }

  .product-link {
    display: block;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease;
  }

  .product-link:hover {
    transform: translateY(-5px);
  color: var(--color-primary);
  }

  .product-image {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    margin-bottom: 20px;
    background-color: transparent;
    overflow: hidden;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.3s ease;
    transform: scale(0.9);
  }

  .product-link:hover .product-image img {
    transform: scale(1);
  }

  .product-image-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-background);
    color: var(--color-border);
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .product-info {
    text-align: center;
  }

  .product-title {
    font-size: 14px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin: 0 0 10px 0;
    color: var(--color-foreground);
    line-height: 1.4;
  }

  .product-price {
    font-size: 14px;
    color: var(--color-foreground);
    font-weight: 600;
    margin: 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .product-out-of-stock {
    color: var(--color-border);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .product-grid-section {
      padding: 40px 20px;
    }

    .product-grid {
      gap: 30px;
    }
  }

  @media (max-width: 768px) {
    .product-grid {
      gap: 20px;
    }
    .product-card {
      width: calc(50% - 12px);
      min-width: 0;
    }
    .product-card--promo {
      width: calc(50% - 12px);
    }
    .product-grid-section {
      padding: 30px 15px;
    }
  }

  @media (max-width: 480px) {
    .product-grid {
      gap: 18px;
    }
    .product-card {
      width: 100%;
    }
    .product-card--promo {
      width: 100%;
    }
    .product-title {
      font-size: 13px;
    }
    .product-price {
      font-size: 13px;
    }
  }

  /* Collection Header */
  .collection-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    padding: 20px 0;
    border-bottom: 1px solid var(--color-border);
  }

  .collection-title h1 {
    font-size: 32px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: var(--color-foreground);
    margin: 0 0 10px 0;
  }

  .product-count {
    font-size: 16px;
    color: var(--color-foreground);
    margin: 0;
    opacity: 0.8;
  }

  .collection-controls {
    display: flex;
    gap: 30px;
    align-items: center;
  }

  .filters, .sorting {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .filters label, .sorting label {
    font-size: 14px;
    font-weight: 500;
    color: var(--color-foreground);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .filters select, .sorting select {
    padding: 8px 12px;
    border: 1px solid var(--color-border);
    border-radius: var(--style-border-radius-inputs);
    background-color: var(--color-background);
    color: var(--color-foreground);
    font-size: 14px;
    cursor: pointer;
  }

  .filters select:focus, .sorting select:focus {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .collection-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 20px;
    }

    .collection-controls {
      flex-direction: column;
      gap: 15px;
      width: 100%;
    }

    .filters, .sorting {
      width: 100%;
      justify-content: space-between;
    }
  }
{% endstylesheet %}

{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  // Sorting functionality - client-side
  const sortSelect = document.getElementById('sort-by');
  const productGrid = document.querySelector('.product-grid');
  const productCards = Array.from(document.querySelectorAll('.product-card'));

  if (sortSelect && productGrid) {
    sortSelect.addEventListener('change', function() {
      const sortValue = this.value;
      const sortedCards = productCards.sort((a, b) => {
        switch (sortValue) {
          case 'title-ascending':
            return a.dataset.title.localeCompare(b.dataset.title);
          case 'title-descending':
            return b.dataset.title.localeCompare(a.dataset.title);
          case 'price-ascending':
            return parseFloat(a.dataset.price) - parseFloat(b.dataset.price);
          case 'price-descending':
            return parseFloat(b.dataset.price) - parseFloat(a.dataset.price);
          case 'created-ascending':
            return parseInt(a.dataset.created) - parseInt(b.dataset.created);
          case 'created-descending':
            return parseInt(b.dataset.created) - parseInt(a.dataset.created);
          default:
            return 0; // Keep original order
        }
      });

      // Clear and re-append sorted cards
      productGrid.innerHTML = '';
      sortedCards.forEach(card => productGrid.appendChild(card));
    });
  }

  // Filtering functionality - server-side
  const filterSelect = document.getElementById('filter-availability');
  if (filterSelect) {
    filterSelect.addEventListener('change', function() {
      const filterValue = this.value;
      const url = new URL(window.location);
      url.searchParams.set('filter_availability', filterValue);
      window.location.href = url.toString();
    });
  }
});
{% endjavascript %}

{% schema %}
