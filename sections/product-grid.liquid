{% comment %}
  Product Grid Section - 3 items per row
{% endcomment %}

<div class="product-grid-section">
  <div class="collection-header">
    <div class="collection-controls">
      <div class="filters dropdown">
        <button
          type="button"
          class="dropdown-toggle filter-toggle"
          id="filter-availability"
          aria-haspopup="listbox"
          aria-expanded="false"
          aria-labelledby="filter-availability filter-availability-label"
          data-filter-toggle
        >
          <span class="filter-toggle__label">Filter</span>
          <span class="filter-toggle__value" data-selected-text>All</span>
          <span class="dropdown-toggle__chevron" aria-hidden="true"></span>
        </button>
        <ul class="dropdown-menu filter-menu" role="listbox" aria-labelledby="filter-availability" data-filter-menu>
          <li role="option" aria-selected="true" class="dropdown-menu__item is-active" data-value="" tabindex="0">All</li>
          <li role="option" aria-selected="false" class="dropdown-menu__item" data-value="available" tabindex="0">Available</li>
          <li role="option" aria-selected="false" class="dropdown-menu__item" data-value="sold_out" tabindex="0">Sold Out</li>
        </ul>
      </div>
      <div class="filters dropdown">
        <button
          type="button"
          class="dropdown-toggle filter-toggle"
          id="filter-type"
          aria-haspopup="listbox"
          aria-expanded="false"
          aria-labelledby="filter-type filter-type-label"
          data-type-toggle
        >
          <span class="filter-toggle__label">Type</span>
          <span class="filter-toggle__value" data-selected-text>All</span>
          <span class="dropdown-toggle__chevron" aria-hidden="true"></span>
        </button>
        <ul class="dropdown-menu filter-menu" role="listbox" aria-labelledby="filter-type" data-type-menu>
          <li role="option" aria-selected="true" class="dropdown-menu__item is-active" data-value="" tabindex="0">All</li>
          <li role="option" aria-selected="false" class="dropdown-menu__item" data-value="clothes" tabindex="0">Clothes</li>
          <li role="option" aria-selected="false" class="dropdown-menu__item" data-value="accessories" tabindex="0">Accessories</li>
          <li role="option" aria-selected="false" class="dropdown-menu__item" data-value="gift cards" tabindex="0">Gift Cards</li>
        </ul>
      </div>
      <div class="sorting dropdown">
        <button
          type="button"
          class="dropdown-toggle sort-toggle"
          id="sort-by"
          aria-haspopup="listbox"
          aria-expanded="false"
          aria-labelledby="sort-by sort-by-label"
          data-sort-toggle
          data-selected-sort="created-descending"
        >
          <span class="filter-toggle__label">Sort</span>
          <span class="sort-toggle__label">Date, new to old</span>
          <span class="dropdown-toggle__chevron" aria-hidden="true"></span>
        </button>
        <ul class="dropdown-menu sort-menu" role="listbox" aria-labelledby="sort-by" data-sort-menu>
          <li role="option" aria-selected="false" class="dropdown-menu__item" data-value="title-ascending" tabindex="0">Alphabetically, A-Z</li>
          <li role="option" aria-selected="false" class="dropdown-menu__item" data-value="title-descending" tabindex="0">Alphabetically, Z-A</li>
          <li role="option" aria-selected="false" class="dropdown-menu__item" data-value="price-ascending" tabindex="0">Price, low to high</li>
          <li role="option" aria-selected="false" class="dropdown-menu__item" data-value="price-descending" tabindex="0">Price, high to low</li>
          <li role="option" aria-selected="false" class="dropdown-menu__item" data-value="created-ascending" tabindex="0">Date, old to new</li>
          <li role="option" aria-selected="true" class="dropdown-menu__item is-active" data-value="created-descending" tabindex="0">Date, new to old</li>
        </ul>
      </div>
    </div>
  </div>
  <div class="product-grid-title">
    <h2 class="shop-name">{{ shop.name }}</h2>
    <p class="product-count">{{ collections.all.products_count }} products</p>
  </div>
  <div class="product-grid">
    {% for product in collections.all.products %}
      <div class="product-card" data-title="{{ product.title | downcase }}" data-price="{{ product.price | times: 1 }}" data-created="{{ product.created_at | date: '%s' }}" data-availability="{% if product.available %}available{% else %}sold_out{% endif %}" data-product-type="{{ product.metafields.custom.type | downcase }}">
        <a href="{{ product.url }}" class="product-link">
          <div class="product-image">
            {% if product.featured_media %}
              <img
                src="{{ product.featured_media | image_url: width: 400 }}"
                alt="{{ product.featured_media.alt | escape }}"
                width="400"
                height="400"
                loading="lazy"
              >
            {% else %}
              <div class="product-image-placeholder">No Image</div>
            {% endif %}
          </div>

          <div class="product-info">
            <h3 class="product-title">{{ product.title }}</h3>
            {% if product.available %}
              <p class="product-price">{% render 'price', amount: product.price, product: product %}</p>
            {% else %}
              <p class="product-price product-out-of-stock">{{ 'products.product.sold_out' | t }}</p>
            {% endif %}
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

{% stylesheet %}
  .product-grid-section {
    padding: 60px 40px;
    color: var(--color-foreground);
  }

  .product-grid-title {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    margin: 0 0 40px;
    font-size: 28px;
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  .product-title {
    display: flex;
    justify-content: center;
  }

  .product-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 40px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .product-card {
    background-color: transparent;
    width: calc(33.333% - 27px); /* 3 columns with gap */
    min-width: 300px;
  }

  .product-card--promo {
    width: calc(33.333% - 27px);
  }

  .product-image--promo img {
    object-fit: cover;
    transform: scale(1);
  }

  .product-card--banner {
    width: 100%;
  }

  .product-image--banner {
    aspect-ratio: 16/6;
    background-color: transparent;
  }

  /* When fewer than 3 items, they'll be centered automatically */
  @media (max-width: 1024px) {
    .product-card {
      width: calc(50% - 20px); /* 2 columns on tablet */
      min-width: 280px;
    }
    .product-card--promo {
      width: calc(50% - 20px);
    }
    .product-card--banner .product-image--banner {
      aspect-ratio: 16/8;
    }
  }

  .product-link {
    display: block;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease;
  }

  .product-link:hover {
    transform: translateY(-5px);
  color: var(--color-primary);
  }

  .product-image {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    margin-bottom: 20px;
    background-color: transparent;
    overflow: hidden;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.3s ease;
    transform: scale(0.9);
  }

  .product-link:hover .product-image img {
    transform: scale(1);
  }

  .product-image-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-background);
    color: var(--color-border);
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .product-info {
    text-align: center;
  }

  .product-title {
    font-size: 14px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin: 0 0 10px 0;
    color: var(--color-foreground);
    line-height: 1.4;
  }

  .product-price {
    font-size: 14px;
    color: var(--color-foreground);
    font-weight: 600;
    margin: 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .product-out-of-stock {
    color: var(--color-border);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .product-grid-section {
      padding: 40px 20px;
    }

    .product-grid {
      gap: 30px;
    }
  }

  @media (max-width: 768px) {
    .product-grid {
      gap: 20px;
    }
    .product-card {
      width: calc(50% - 12px);
      min-width: 0;
    }
    .product-card--promo {
      width: calc(50% - 12px);
    }
    .product-grid-section {
      padding: 30px 15px;
    }
  }

  @media (max-width: 480px) {
    .product-grid {
      gap: 18px;
    }
    .product-card {
      width: 100%;
    }
    .product-card--promo {
      width: 100%;
    }
    .product-title {
      font-size: 13px;
    }
    .product-price {
      font-size: 13px;
    }
  }

  /* Collection Header */
  .collection-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    padding: 20px 0;
    border-bottom: 1px solid var(--color-border);
  }

  .collection-title h1 {
    font-size: 32px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: var(--color-foreground);
    margin: 0 0 10px 0;
  }

  .product-count {
    font-size: 16px;
    color: var(--color-foreground);
    margin: 0;
    opacity: 0.8;
  }

  .collection-controls {
    display: flex;
    gap: 16px;
    align-items: center;
    flex-wrap: wrap;
  }

  .filters,
  .sorting {
    position: relative;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .dropdown-toggle {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 10px 18px;
    border-radius: 14px;
    border: 1px solid var(--color-border);
    background-color: var(--color-background);
    color: var(--color-foreground);
    font-size: 14px;
    letter-spacing: 0.2px;
    line-height: 1.3;
    min-height: 53px;
    cursor: pointer;
    box-shadow: 0 12px 28px rgba(15, 23, 42, 0.12);
    transition: box-shadow 0.2s ease, border-color 0.2s ease, transform 0.2s ease;
  }

  .dropdown-toggle:hover {
    border-color: var(--color-primary);
    box-shadow: 0 18px 38px rgba(15, 23, 42, 0.16);
    transform: translateY(-1px);
  }

  .dropdown-toggle:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 3px;
  }

  .dropdown-toggle__chevron {
    width: 10px;
    height: 10px;
    margin-bottom: 5px;
    border-right: 2px solid currentColor;
    border-bottom: 2px solid currentColor;
    transform: rotate(45deg);
    transition: transform 0.2s ease;
  }

  .dropdown-toggle[aria-expanded='true'] .dropdown-toggle__chevron {
    transform: rotate(-135deg);
    margin-top: 10px;
  }

  .filter-toggle__icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    border: 1px solid var(--color-border);
    background-color: rgba(15, 23, 42, 0.04);
    color: var(--color-foreground);
  }

  .filter-toggle__label {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    opacity: 0.7;
  }

  .filter-toggle__value {
    font-weight: 600;
  }

  .sort-toggle__label {
    font-weight: 600;
  }

  .dropdown-menu {
    display: none;
    position: absolute;
    top: calc(100% + 12px);
    left: 0;
    min-width: 210px;
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: 14px;
    box-shadow: 0 30px 60px rgba(15, 23, 42, 0.24);
    padding: 8px;
    z-index: 40;
  }

  .dropdown-menu.is-open {
    display: block;
  }

  .dropdown-menu__item {
    list-style: none;
    border-radius: 10px;
    padding: 10px 14px;
    font-size: 14px;
    cursor: pointer;
    transition: background-color 0.15s ease, color 0.15s ease;
  }

  .dropdown-menu__item + .dropdown-menu__item {
    margin-top: 4px;
  }

  .dropdown-menu__item:hover,
  .dropdown-menu__item:focus {
    background-color: rgba(15, 23, 42, 0.08);
  }

  .dropdown-menu__item.is-active {
    background-color: rgba(15, 23, 42, 0.12);
    color: var(--color-primary);
  }

  .filter-menu {
    min-width: 190px;
  }

  .sort-menu {
    left: auto;
    right: 0;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .collection-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 20px;
    }

    .collection-controls {
      flex-direction: column;
      align-items: stretch;
      width: 100%;
    }

    .filters,
    .sorting {
      width: 100%;
    }

    .dropdown-toggle {
      width: 100%;
      justify-content: space-between;
    }
  }
{% endstylesheet %}

{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  const productGrid = document.querySelector('.product-grid');
  const productCards = Array.from(document.querySelectorAll('.product-card'));
  const originalOrder = productCards.slice();
  const productCountEl = document.querySelector('.product-count');
  let currentAvailability = '';
  let currentType = '';
  let currentSort = 'created-descending';

  const dropdownRegistry = [];

  const registerDropdown = (toggle, menu) => {
    dropdownRegistry.push({ toggle, menu });
  };

  const closeDropdown = (toggle, menu) => {
    toggle.setAttribute('aria-expanded', 'false');
    menu.classList.remove('is-open');
  };

  const openDropdown = (toggle, menu) => {
    toggle.setAttribute('aria-expanded', 'true');
    menu.classList.add('is-open');
  };

  const closeAllDropdowns = (exceptionToggle = null) => {
    dropdownRegistry.forEach(({ toggle, menu }) => {
      if (exceptionToggle && toggle === exceptionToggle) {
        return;
      }
      if (menu.classList.contains('is-open')) {
        closeDropdown(toggle, menu);
      }
    });
  };

  const toggleDropdown = (toggle, menu) => {
    const isOpen = menu.classList.contains('is-open');
    if (isOpen) {
      closeDropdown(toggle, menu);
    } else {
      closeAllDropdowns(toggle);
      openDropdown(toggle, menu);
    }
  };

  document.addEventListener('click', (event) => {
    if (!event.target.closest('.dropdown')) {
      closeAllDropdowns();
    }
  });

  document.addEventListener('keydown', (event) => {
    if (event.key === 'Escape') {
      closeAllDropdowns();
    }
  });

  let applyFilters = () => {
    productCards.forEach((card) => {
      const avail = card.dataset.availability;
      const type = card.dataset.productType;
      const showAvail = !currentAvailability || (currentAvailability === 'available' ? avail === 'available' : avail === 'sold_out');
      let showType;
      if (currentType === 'other') {
        showType = type === '';
      } else if (currentType) {
        showType = type === currentType;
      } else {
        showType = true;
      }
      card.style.display = showAvail && showType ? '' : 'none';
    });
    const visibleCount = productCards.filter(card => card.style.display !== 'none').length;
    if(visibleCount === 1) {
      productCountEl.textContent = `${visibleCount} product`;
    } else {
      productCountEl.textContent = `${visibleCount} products`;
    }
  };

  let applyAvailabilityFilter = () => {};

  const filterToggle = document.querySelector('[data-filter-toggle]');
  const filterMenu = document.querySelector('[data-filter-menu]');

  if (filterToggle && filterMenu) {
    registerDropdown(filterToggle, filterMenu);
    const filterOptions = Array.from(filterMenu.querySelectorAll('[data-value]'));
    const selectedTextEl = filterToggle.querySelector('[data-selected-text]');

    applyAvailabilityFilter = (filterValue) => {
      currentAvailability = filterValue;
      applyFilters();
    };

    filterToggle.addEventListener('click', () => {
      toggleDropdown(filterToggle, filterMenu);
    });

    filterOptions.forEach((option) => {
      option.addEventListener('click', () => {
        if (option.classList.contains('is-active')) {
          closeAllDropdowns();
          return;
        }

        filterOptions.forEach((item) => {
          item.classList.toggle('is-active', item === option);
          item.setAttribute('aria-selected', item === option ? 'true' : 'false');
        });

        selectedTextEl.textContent = option.textContent;
        applyAvailabilityFilter(option.dataset.value);
        closeAllDropdowns();
      });

      option.addEventListener('keydown', (event) => {
        if (event.key === 'Enter' || event.key === ' ') {
          event.preventDefault();
          option.click();
        }
      });
    });

    applyAvailabilityFilter('');
  }

  let applyTypeFilter = () => {};

  const typeToggle = document.querySelector('[data-type-toggle]');
  const typeMenu = document.querySelector('[data-type-menu]');

  if (typeToggle && typeMenu) {
    registerDropdown(typeToggle, typeMenu);
    const typeOptions = Array.from(typeMenu.querySelectorAll('[data-value]'));
    const selectedTextEl = typeToggle.querySelector('[data-selected-text]');

    applyTypeFilter = (filterValue) => {
      currentType = filterValue;
      applyFilters();
    };

    typeToggle.addEventListener('click', () => {
      toggleDropdown(typeToggle, typeMenu);
    });

    typeOptions.forEach((option) => {
      option.addEventListener('click', () => {
        if (option.classList.contains('is-active')) {
          closeAllDropdowns();
          return;
        }

        typeOptions.forEach((item) => {
          item.classList.toggle('is-active', item === option);
          item.setAttribute('aria-selected', item === option ? 'true' : 'false');
        });

        selectedTextEl.textContent = option.textContent;
        applyTypeFilter(option.dataset.value);
        closeAllDropdowns();
      });

      option.addEventListener('keydown', (event) => {
        if (event.key === 'Enter' || event.key === ' ') {
          event.preventDefault();
          option.click();
        }
      });
    });

    applyTypeFilter('');
  }

  const sortToggle = document.querySelector('[data-sort-toggle]');
  const sortMenu = document.querySelector('[data-sort-menu]');

  if (sortToggle && sortMenu && productGrid) {
    registerDropdown(sortToggle, sortMenu);
    const sortOptions = Array.from(sortMenu.querySelectorAll('[data-value]'));
    const sortLabelEl = sortToggle.querySelector('.sort-toggle__label');

    const updateSortSelection = (activeOption) => {
      sortOptions.forEach((item) => {
        const isActive = item === activeOption;
        item.classList.toggle('is-active', isActive);
        item.setAttribute('aria-selected', isActive ? 'true' : 'false');
      });
    };

    const applySort = (sortValue) => {
      currentSort = sortValue;
      let sortedCards;

      switch (sortValue) {
        case 'title-ascending':
          sortedCards = productCards.slice().sort((a, b) => a.dataset.title.localeCompare(b.dataset.title));
          break;
        case 'title-descending':
          sortedCards = productCards.slice().sort((a, b) => b.dataset.title.localeCompare(a.dataset.title));
          break;
        case 'price-ascending':
          sortedCards = productCards.slice().sort((a, b) => parseFloat(a.dataset.price) - parseFloat(b.dataset.price));
          break;
        case 'price-descending':
          sortedCards = productCards.slice().sort((a, b) => parseFloat(b.dataset.price) - parseFloat(a.dataset.price));
          break;
        case 'created-ascending':
          sortedCards = productCards.slice().sort((a, b) => parseInt(a.dataset.created, 10) - parseInt(b.dataset.created, 10));
          break;
        case 'created-descending':
        default:
          sortedCards = productCards.slice().sort((a, b) => parseInt(b.dataset.created, 10) - parseInt(a.dataset.created, 10));
          break;
      }

      productGrid.innerHTML = '';
      sortedCards.forEach((card) => productGrid.appendChild(card));

      productCards.length = 0;
      productCards.push(...sortedCards);

      applyFilters();
    };

    sortToggle.addEventListener('click', () => {
      toggleDropdown(sortToggle, sortMenu);
    });

    sortOptions.forEach((option) => {
      option.addEventListener('click', () => {
        if (option.classList.contains('is-active')) {
          closeAllDropdowns();
          return;
        }

        updateSortSelection(option);
        sortLabelEl.textContent = option.textContent;
        applySort(option.dataset.value);
        closeAllDropdowns();
      });

      option.addEventListener('keydown', (event) => {
        if (event.key === 'Enter' || event.key === ' ') {
          event.preventDefault();
          option.click();
        }
      });
    });

    const initialSort = sortToggle.dataset.selectedSort || currentSort;
    const initialOption = sortOptions.find((item) => item.dataset.value === initialSort) || sortOptions[0];
    if (initialOption) {
      updateSortSelection(initialOption);
      sortLabelEl.textContent = initialOption.textContent;
      applySort(initialOption.dataset.value);
    }
  }
});
{% endjavascript %}

