{% liquid
  assign design_color_background = '#000000'
  assign design_color_foreground = '#FFFFFF'
  assign design_color_primary = '#8F2B3F'
  assign design_color_surface = '#111111'
  assign design_color_border = '#2A2A2A'
  assign design_color_success = '#2EAF74'
  assign design_color_warning = '#E3A008'
  assign design_color_error = '#D64545'

  assign design_spacing_base = 16
  assign design_radius_base = 4
  assign design_letter_spacing_heading = 0.15
  assign design_heading_weight = 700

  assign times_stack = '"Times New Roman", Times, serif'

  assign layout_page_width = settings.max_page_width | default: '1200px'
  assign layout_page_margin = settings.min_page_margin | default: 24
%}

{% style %}
  :root {
    /** Typography */
    --font-primary-family: {{ times_stack }};
    --font-primary-style: normal;
    --font-primary-weight: 400;
    --font-heading-weight: {{ design_heading_weight }};
    --font-heading-transform: uppercase;
    --font-heading-letter-spacing: {{ design_letter_spacing_heading }}em;

    /** Layout */
    --page-width: {{ layout_page_width }};
    --page-margin: {{ layout_page_margin }}px;
    --radius-base: {{ design_radius_base }}px;
    --radius-pill: calc({{ design_radius_base }}px * 9999);

    /** Spacing scale */
    --space-2xs: calc({{ design_spacing_base }}px * 0.25);
    --space-xs: calc({{ design_spacing_base }}px * 0.5);
    --space-sm: calc({{ design_spacing_base }}px * 0.75);
    --space-md: calc({{ design_spacing_base }}px * 1);
    --space-lg: calc({{ design_spacing_base }}px * 1.5);
    --space-xl: calc({{ design_spacing_base }}px * 2);
    --space-2xl: calc({{ design_spacing_base }}px * 3);
  --space-3xl: calc({{ design_spacing_base }}px * 3.75);
  --space-4xl: calc({{ design_spacing_base }}px * 5);

    /** Color palette */
    --color-background: {{ design_color_background }};
    --color-surface: {{ design_color_surface }};
    --color-foreground: {{ design_color_foreground }};
    --color-foreground-muted: color-mix(in srgb, {{ design_color_foreground }} 65%, transparent);
    --color-border: {{ design_color_border }};
    --color-primary: {{ design_color_primary }};
    --color-primary-hover: color-mix(in srgb, {{ design_color_primary }} 85%, {{ design_color_foreground }} 15%);
    --color-success: {{ design_color_success }};
    --color-warning: {{ design_color_warning }};
    --color-error: {{ design_color_error }};

    /** Announcement specific */
    --color-announcement-bg: {{ design_color_primary }};
    --color-announcement-fg: {{ design_color_foreground }};

    /** Effects */
    --shadow-soft: 0 12px 24px -16px rgba(0, 0, 0, 0.65);
    --shadow-hard: 0 8px 0 0 rgba(0, 0, 0, 1);

    /** Legacy compatibility */
    --style-border-radius-inputs: {{ design_radius_base }}px;
  }
{% endstyle %}
