{% liquid
  assign design_color_background = '#FFFFFF'
  assign design_color_foreground = '#050505'
  assign design_color_primary = '#B21B24'
  assign design_color_surface = '#F7F4F1'
  assign design_color_border = '#DFDBD3'
  assign design_color_success = '#0B8A3C'
  assign design_color_warning = '#C47A21'
  assign design_color_error = '#C23434'

  assign design_spacing_base = 18
  assign design_radius_base = 6
  assign design_letter_spacing_body = 0.09
  assign design_letter_spacing_heading = 0.05
  assign design_font_weight_body = 400
  assign design_font_weight_heading = 500
  assign design_border_width = 1

  assign sans_stack = '"Tenor Sans", sans-serif'
  assign serif_stack = '"Libre Baskerville", serif'

  assign layout_page_width = settings.max_page_width | default: '1280px'
  assign layout_page_margin = settings.min_page_margin | default: 24
%}

{% style %}
  :root {
    /** Typography */
    --font-primary-family: {{ sans_stack }};
    --font-primary-style: normal;
    --font-primary-weight: {{ design_font_weight_body }};
    --font-heading-family: {{ serif_stack }};
    --font-heading-weight: {{ design_font_weight_heading }};
    --font-heading-transform: none;
    --font-heading-letter-spacing: {{ design_letter_spacing_heading }}em;
    --font-body-letter-spacing: {{ design_letter_spacing_body }}em;

    /** Layout */
    --page-width: {{ layout_page_width }};
    --page-margin: {{ layout_page_margin }}px;
    --radius-base: {{ design_radius_base }}px;
    --radius-pill: calc({{ design_radius_base }}px * 9999);

    /** Spacing scale */
    --spacing-base: {{ design_spacing_base }}px;
    --space-2xs: calc({{ design_spacing_base }}px * 0.25);
    --space-xs: calc({{ design_spacing_base }}px * 0.5);
    --space-sm: calc({{ design_spacing_base }}px * 0.75);
    --space-md: calc({{ design_spacing_base }}px * 1);
    --space-lg: calc({{ design_spacing_base }}px * 1.5);
    --space-xl: calc({{ design_spacing_base }}px * 2);
    --space-2xl: calc({{ design_spacing_base }}px * 3);
    --space-3xl: calc({{ design_spacing_base }}px * 3.75);
    --space-4xl: calc({{ design_spacing_base }}px * 5);

    /** Color palette */
    --color-background: {{ design_color_background }};
    --color-surface: {{ design_color_surface }};
    --color-foreground: {{ design_color_foreground }};
    --color-foreground-muted: color-mix(in srgb, {{ design_color_foreground }} 55%, transparent);
    --color-border: {{ design_color_border }};
    --color-primary: {{ design_color_primary }};
    --color-primary-hover: color-mix(in srgb, {{ design_color_primary }} 85%, {{ design_color_foreground }} 15%);
    --color-success: {{ design_color_success }};
    --color-warning: {{ design_color_warning }};
    --color-error: {{ design_color_error }};

    /** Buttons */
    --btn-letter-spacing: 0.1em;
    --btn-font-weight: 600;
    --btn-text-transform: uppercase;
    --btn-padding: 12px 24px;
    --btn-radius: {{ design_radius_base }}px;

    /* Primary Button */
    --btn-primary-bg: {{ design_color_primary }};
    --btn-primary-text: {{ design_color_background }};
    --btn-primary-border: {{ design_color_primary }};
    --btn-primary-hover-bg: {{ design_color_primary }};
    --btn-primary-hover-text: {{ design_color_background }};
    --btn-primary-hover-border: {{ design_color_primary }};

    /* Secondary Button (Soft/Elegant) */
    --btn-secondary-bg: {{ design_color_surface }};
    --btn-secondary-text: {{ design_color_foreground }};
    --btn-secondary-border: {{ design_color_border }};
    --btn-secondary-hover-bg: color-mix(in oklab, var(--color-surface), var(--color-primary) 12%);
    --btn-secondary-hover-text: color-mix(in oklab, var(--color-primary), transparent 40%);
    --btn-secondary-hover-border: {{ design_color_primary }};

    /* Tertiary Button (Minimal) */
    --btn-tertiary-bg: transparent;
    --btn-tertiary-text: {{ design_color_foreground }};
    --btn-tertiary-border: transparent;
    --btn-tertiary-hover-bg: color-mix(in oklab, {{ design_color_surface }}, {{ design_color_primary }} 12%);
    --btn-tertiary-hover-text: {{ design_color_primary }};
    --btn-tertiary-hover-border: {{ design_color_primary }};


    /** Borders */
    --border-width: {{ design_border_width }}px;
    --border-style: solid;
    --border-base: var(--border-width) var(--border-style) var(--color-border);

    /** Announcement specific */
    --color-announcement-bg: {{ design_color_background }};
    --color-announcement-fg: {{ design_color_foreground }};

    /** Effects */
    --shadow-soft: 0 20px 60px rgba(8, 8, 8, 0.08);
    --shadow-hard: 0 8px 30px rgba(8, 8, 8, 0.12);

    /** Legacy compatibility */
    --style-border-radius-inputs: {{ design_radius_base }}px;
    --style-border-radius-buttons: {{ design_radius_base }}px;
  }
{% endstyle %}
