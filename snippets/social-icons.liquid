{% comment %}
  Renders social icons (Instagram, TikTok, YouTube) using currentColor.
  Usage: {% render 'social-icons' %}
  Optional params:
    - size: number (default 22)
    - class: string (wrapper class)
{% endcomment %}

{% assign icon_size = size | default: 22 %}
<div class="social-icons {{ class }}">
  {% if settings.instagram_url != blank %}
    <a class="social-icon" href="{{ settings.instagram_url }}" target="_blank" rel="noopener" aria-label="Instagram" title="Instagram">
  <svg width="{{ icon_size }}" height="{{ icon_size }}" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path d="M7 2h10a5 5 0 0 1 5 5v10a5 5 0 0 1-5 5H7a5 5 0 0 1-5-5V7a5 5 0 0 1 5-5z" stroke="currentColor" stroke-width="1.5" fill="none"/>
        <circle cx="12" cy="12" r="3.5" stroke="currentColor" stroke-width="1.5" fill="none"/>
        <circle cx="17.5" cy="6.5" r="1.2" fill="currentColor"/>
      </svg>
    </a>
  {% endif %}

  {% if settings.tiktok_url != blank %}
    <a class="social-icon" href="{{ settings.tiktok_url }}" target="_blank" rel="noopener" aria-label="TikTok" title="TikTok">
  <svg width="{{ icon_size }}" height="{{ icon_size }}" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path d="M14 3v6.2a5.8 5.8 0 1 1-5.8 5.8V11A3 3 0 0 1 11 8a3 3 0 0 1 3 3" stroke="currentColor" stroke-width="1.5" fill="none" stroke-linecap="round"/>
        <path d="M14 3c1.1 1.9 3 3.3 5.2 3.6" stroke="currentColor" stroke-width="1.5" fill="none" stroke-linecap="round"/>
      </svg>
    </a>
  {% endif %}

  {% if settings.youtube_url != blank %}
    <a class="social-icon" href="{{ settings.youtube_url }}" target="_blank" rel="noopener" aria-label="YouTube" title="YouTube">
  <svg width="{{ icon_size }}" height="{{ icon_size }}" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path d="M22 12s0-3-.4-4.4c-.2-.8-.8-1.4-1.6-1.6C18.6 5.6 12 5.6 12 5.6s-6.6 0-8 .4c-.8.2-1.4.8-1.6 1.6C2 9 2 12 2 12s0 3 .4 4.4c.2.8.8 1.4 1.6 1.6 1.4.4 8 .4 8 .4s6.6 0 8-.4c.8-.2 1.4-.8 1.6-1.6.4-1.4.4-4.4.4-4.4Z" stroke="currentColor" stroke-width="1.5" fill="none"/>
        <path d="M10 9.75v4.5L14.5 12 10 9.75Z" fill="currentColor"/>
      </svg>
    </a>
  {% endif %}
</div>

{% style %}
.social-icons {
  display: inline-flex;
  gap: 14px;
  align-items: center;
  color: var(--color-foreground);
}
.social-icon { display: inline-flex; color: inherit; text-decoration: none; opacity: 0.9; transition: opacity .2s ease, color .2s ease; }
.social-icon:hover { opacity: 1; color: var(--color-accent); }
{% endstyle %}
