<div id="custom-loading-screen" class="loading-screen">
  <div class="loading-logo-container">
    <img src="https://cdn.shopify.com/s/files/1/0954/9840/4181/files/Logo_black.svg?v=1764257555" width="100%" height="100%" alt="Loading..." class="loading-logo">
  </div>
</div>

<style>
  .loading-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: var(--color-background);
    z-index: 2147483647;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.4s ease, visibility 0.4s ease;
  }

  .loading-screen.active {
    opacity: 1;
    visibility: visible;
  }

  .loading-logo-container {
    perspective: 1000px;
    width: 100px; /* Adjust base size */
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .loading-logo {
    width: 100%;
    height: auto;
    display: block;
    animation: spin3D 2.5s infinite linear;
    transform-style: preserve-3d;
  }

  @keyframes spin3D {
    0% {
      transform: rotateY(0deg);
    }
    100% {
      transform: rotateY(360deg);
    }
  }
</style>

<script>
  window.loadingScreen = {
    show: function() {
      const loader = document.getElementById('custom-loading-screen');
      if (loader) loader.classList.add('active');
    },
    hide: function() {
      const loader = document.getElementById('custom-loading-screen');
      if (loader) loader.classList.remove('active');
    }
  };
</script>