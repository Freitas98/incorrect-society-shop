{% comment %}
  404 Content - Card style, for use in policy-page.liquid layout
{% endcomment %}

<div class="policy-content u-text-center">
  <h2 class="text-primary u-mb-md">{{ '404.subtitle' | t }}</h2>
  <p class="text-soft u-mb-md">{{ '404.not_found' | t }}</p>
  <a
    href="{{ routes.root_url }}"
    class="btn btn--primary btn--lg btn--elevated u-mt-md"
  >
    {{- '404.back_to_shopping' | t -}}
  </a>
</div>
