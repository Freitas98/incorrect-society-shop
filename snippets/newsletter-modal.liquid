{% comment %}
  Newsletter Modal - Split Layout
  Replaces the previous newsletter modal.
{% endcomment %}

{% unless request.path contains '/challenge' %}
<div id="NewsletterModal" class="newsletter-modal-overlay" aria-hidden="true">
  <div class="newsletter-modal-container" role="dialog" aria-modal="true">
    <button class="newsletter-modal-close" aria-label="Close">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M18 6L6 18M6 6l12 12"></path>
      </svg>
    </button>
    
    <div class="newsletter-modal-content">
      <div class="newsletter-left">
        <div class="newsletter-logo">
           <img src="https://cdn.shopify.com/s/files/1/0954/9840/4181/files/Logo_black.svg?v=1764257555" alt="{{ shop.name }}" width="150" height="auto" style="max-width: 180px;">
        </div>
        
        <p class="newsletter-subheading">Get 10% off your first order</p>
        
        {% form 'customer', id: 'NewsletterModalForm', class: 'newsletter-form', onsubmit: 'window.loadingScreen.show();' %}
          {% if form.posted_successfully? %}
            <div class="newsletter-success-message" style="text-align: center; width: 100%;">
              <h3>Thank you for subscribing!</h3>
              <p>Check your e-mail for your 10% discount.</p>
            </div>
            <script>
              if (window.history.replaceState) {
                window.history.replaceState(null, null, window.location.pathname);
              }
              try { localStorage.setItem('newsletter_modal_status', 'subscribed'); } catch(e){}
            </script>
          {% else %}
            <input type="hidden" name="contact[tags]" value="newsletter_modal">
            <input type="hidden" name="contact[accepts_marketing]" value="true">
            
            <div class="form-group">
              <input 
                type="email" 
                name="contact[email]" 
                class="form-input" 
                placeholder="Email" 
                required
                value="{{ form.email }}"
              >
            </div>
            
            <button type="submit" class="newsletter-submit-btn">
              Join Now
            </button>
          {% endif %}
          
          {% if form.errors %}
            <div class="newsletter-errors">
              {%- capture error_messages -%}{{ form.errors | default_errors }}{%- endcapture -%}
              {%- if error_messages contains 'taken' or error_messages contains 'already' -%}
                This email is already subscribed to our newsletter.
              {%- else -%}
                {{ error_messages }}
              {%- endif -%}
            </div>
          {% endif %}
        {% endform %}
      </div>
      
      <div class="newsletter-right">
        {% if settings.newsletter_modal_image %}
          <img src="{{ settings.newsletter_modal_image | image_url: width: 800 }}" height="100%" width="100%" alt="Newsletter" loading="lazy">
        {% else %}
          <img src="https://cdn.shopify.com/s/files/1/0954/9840/4181/files/CAR01650-2.jpg?v=1764120484" height="100%" width="100%" alt="Newsletter" loading="lazy">
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  .newsletter-modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 99999;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: all 0.4s ease;
    backdrop-filter: blur(2px);
  }
  
  .newsletter-modal-overlay.is-visible {
    opacity: 1;
    visibility: visible;
  }
  
  .newsletter-modal-container {
    background: #fff;
    width: 900px;
    max-width: 90vw;
    height: 550px;
    max-height: 90vh;
    position: relative;
    display: flex;
    box-shadow: 0 20px 50px rgba(0,0,0,0.2);
    border-radius: var(--style-border-radius-inputs);
    overflow: hidden;
  }
  
  .newsletter-modal-close {
    position: absolute;
    top: 15px;
    right: 15px;
    background: rgba(255,255,255,0.8);
    border: none;
    cursor: pointer;
    z-index: 10;
    color: #000;
    width: 32px;
    height: 32px;
    border-radius: var(--style-border-radius-inputs);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s;
  }
  
  .newsletter-modal-close:hover {
    background: #fff;
  }
  
  .newsletter-modal-content {
    display: flex;
    width: 100%;
    height: 100%;
  }
  
  .newsletter-left {
    flex: 1;
    padding: 50px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: #fff;
  }
  
  .newsletter-right {
    flex: 1;
    position: relative;
    overflow: hidden;
  }
  
  .newsletter-right img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .newsletter-logo {
    margin-bottom: 30px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .newsletter-subheading {
    font-size: 18px;
    margin: 0 0 30px;
    text-align: center;
    color: var(--color-primary, #8d2b3d);
    font-weight: 600;
  }
  
  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 15px;
    width: 100%;
    max-width: 350px;
    margin: 0 auto;
  }
  
  .form-group {
    width: 100%;
  }
  
  .form-input {
    width: 100%;
    padding: 12px 15px;
    border: 1px solid var(--color-primary, #8d2b3d);
    border-radius: var(--style-border-radius-inputs);
    font-size: 14px;
    outline: none;
    color: var(--color-foreground, #050505);
    background: transparent;
  }
  
  .form-input::placeholder {
    color: rgba(5, 5, 5, 0.5);
  }
  
  .newsletter-submit-btn {
    background-color: var(--color-primary, #8d2b3d);
    color: #fff;
    border: none;
    padding: 14px;
    font-size: 16px;
    font-weight: 700;
    border-radius: var(--style-border-radius-inputs);
    cursor: pointer;
    transition: opacity 0.2s;
    text-transform: none;
    letter-spacing: 0;
  }
  
  .newsletter-submit-btn:hover {
    opacity: 0.9;
  }
  
  .newsletter-consent {
    margin-top: 5px;
  }
  
  .checkbox-container {
    display: flex;
    align-items: flex-start;
    gap: 10px;
    cursor: pointer;
    font-size: 11px;
    color: #666;
    line-height: 1.4;
    text-align: left;
  }
  
  .checkbox-container input {
    margin-top: 2px;
    accent-color: var(--color-primary, #8d2b3d);
  }
  
  .newsletter-success-message {
    text-align: center;
    color: var(--color-foreground, #050505);
  }
  
  .newsletter-errors {
    color: #d93025;
    font-size: 12px;
    text-align: center;
  }
  
  @media (max-width: 768px) {
    .newsletter-modal-container {
      flex-direction: column;
      height: auto;
      max-height: 90vh;
      width: 90vw;
      overflow-y: auto;
    }
    
    .newsletter-right {
      display: none;
    }
    
    .newsletter-left {
      padding: 40px 20px;
    }
    
    .newsletter-heading {
      font-size: 28px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const modal = document.getElementById('NewsletterModal');
    const closeBtn = document.querySelector('.newsletter-modal-close');
    
    if (!modal) return;
    
    const storageKey = 'newsletter_modal_status';
    const expiryKey = 'newsletter_modal_expires';
    const showDays = 7;
    
    // Check if user has already subscribed or closed the modal recently
    function shouldShow() {
      try {
        const status = localStorage.getItem(storageKey);
        if (status === 'subscribed') return false;
        const exp = parseInt(localStorage.getItem(expiryKey) || '0', 10);
        if (exp && Date.now() < exp) return false;
      } catch (_) {}
      return true;
    }
    
    // Check if we are showing success or error message from form submission
    const successMessage = modal.querySelector('.newsletter-success-message');
    const formErrors = modal.querySelector('.newsletter-errors');
    if (successMessage) {
      // Show immediately if success message is present (e.g. after captcha redirect)
      modal.classList.add('is-visible');
      try {
        localStorage.setItem(storageKey, 'subscribed');
      } catch (_) {}
      
      // Hide after 5 seconds
      setTimeout(() => {
        modal.classList.remove('is-visible');
      }, 5000);
    } else if (formErrors) {
      // Show modal to display error message
      modal.classList.add('is-visible');
    } else {
      // Only show if not subscribed and not closed in this session
      if (shouldShow()) {
        // Show modal after 3 seconds
        setTimeout(() => {
          modal.classList.add('is-visible');
        }, 3000);
      }
    }
    
    function closeModal() {
      modal.classList.remove('is-visible');
      // Set expiry
      const expiresAt = Date.now() + showDays * 24 * 60 * 60 * 1000;
      try {
        localStorage.setItem(expiryKey, String(expiresAt));
      } catch (_) {}
    }
    
    if (closeBtn) {
      closeBtn.addEventListener('click', closeModal);
    }
    
    // Close on click outside
    modal.addEventListener('click', function(e) {
      if (e.target === modal) {
        closeModal();
      }
    });
  });
</script>
{% endunless %}
