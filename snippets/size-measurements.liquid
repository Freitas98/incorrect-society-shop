  {% endcase %}

  {% if unit == 'inches' %}
    {% assign inches_value = cm_value | times: 1.0 | divided_by: 2.54 | round: 1 %}
    {{ inches_value }}"
  {% else %}
    {{ cm_value }} cm
  {% endif %}
{% endif %}
