{% comment %}
  Get measurement value
  Parameters: garment, size, point, unit
  Usage: {% render 'size-measurements', garment: 'tshirt', size: 's', point: 'a', unit: 'cm' %}

  Get measurement note
  Parameters: action: 'note', unit: 'cm' or 'inches'
  Usage: {% render 'size-measurements', action: 'note', unit: 'cm' %}
{% endcomment %}

{% if action == 'note' %}
  {% if unit == 'inches' %}
    {{ 'size_guide.measurement_note_inches' | t | default: 'ALL MEASUREMENTS MAY VARY UP TO 0.8"' }}
  {% else %}
    {{ 'size_guide.measurement_note' | t | default: 'ALL MEASUREMENTS MAY VARY UP TO 2 CM' }}
  {% endif %}
{% else %}
  {% assign variable_name = garment | append: '_' | append: size | append: '_' | append: point %}
  {% assign cm_value = 0 %}

  {% case variable_name %}
    {% when 'tshirt_s_a' -%}
      {%- assign cm_value = tshirt_s_a %}
    {% when 'tshirt_s_b' -%}
      {%- assign cm_value = tshirt_s_b %}
    {% when 'tshirt_s_c' -%}
      {%- assign cm_value = tshirt_s_c %}
    {% when 'tshirt_m_a' -%}
      {%- assign cm_value = tshirt_m_a %}
    {% when 'tshirt_m_b' -%}
      {%- assign cm_value = tshirt_m_b %}
    {% when 'tshirt_m_c' -%}
      {%- assign cm_value = tshirt_m_c %}
    {% when 'tshirt_l_a' -%}
      {%- assign cm_value = tshirt_l_a %}
    {% when 'tshirt_l_b' -%}
      {%- assign cm_value = tshirt_l_b %}
    {% when 'tshirt_l_c' -%}
      {%- assign cm_value = tshirt_l_c %}
    {% when 'tshirt_xl_a' -%}
      {%- assign cm_value = tshirt_xl_a %}
    {% when 'tshirt_xl_b' -%}
      {%- assign cm_value = tshirt_xl_b %}
    {% when 'tshirt_xl_c' -%}
      {%- assign cm_value = tshirt_xl_c %}
    {% comment %} Too Scared Longsleeve {% endcomment %}
    {% when 'longsleeve_s_a' -%}
      {%- assign cm_value = longsleeve_s_a %}
    {% when 'longsleeve_s_b' -%}
      {%- assign cm_value = longsleeve_s_b %}
    {% when 'longsleeve_s_c' -%}
      {%- assign cm_value = longsleeve_s_c %}
    {% when 'longsleeve_m_a' -%}
      {%- assign cm_value = longsleeve_m_a %}
    {% when 'longsleeve_m_b' -%}
      {%- assign cm_value = longsleeve_m_b %}
    {% when 'longsleeve_m_c' -%}
      {%- assign cm_value = longsleeve_m_c %}
    {% when 'longsleeve_l_a' -%}
      {%- assign cm_value = longsleeve_l_a %}
    {% when 'longsleeve_l_b' -%}
      {%- assign cm_value = longsleeve_l_b %}
    {% when 'longsleeve_l_c' -%}
      {%- assign cm_value = longsleeve_l_c %}
    {% when 'longsleeve_xl_a' -%}
      {%- assign cm_value = longsleeve_xl_a %}
    {% when 'longsleeve_xl_b' -%}
      {%- assign cm_value = longsleeve_xl_b %}
    {% when 'longsleeve_xl_c' -%}
      {%- assign cm_value = longsleeve_xl_c %}
    {% comment %} Baby Blue Tee {% endcomment %}
    {% when 'babytee_xs_a' -%}
      {%- assign cm_value = babytee_xs_a %}
    {% when 'babytee_xs_b' -%}
      {%- assign cm_value = babytee_xs_b %}
    {% when 'babytee_xs_c' -%}
      {%- assign cm_value = babytee_xs_c %}
    {% when 'babytee_s_a' -%}
      {%- assign cm_value = babytee_s_a %}
    {% when 'babytee_s_b' -%}
      {%- assign cm_value = babytee_s_b %}
    {% when 'babytee_s_c' -%}
      {%- assign cm_value = babytee_s_c %}
    {% when 'babytee_m_a' -%}
