{% comment %}
  Contact Us Content - Card style, for use in policy-page.liquid layout
{% endcomment %}

<h2 class="text-lead">{{ 'contact.contact_highlight' | t }}</h2>
<p class="text-soft u-mb-lg">{{ 'contact.contact_intro' | t }}</p>

<div
  class="policy-content u-text-center"
>
  <h3 class="text-primary u-mb-lg">{{ 'contact.contact_now' | t }}</h3>
  <p class="text-soft u-mb-lg">
    {{ 'contact.contact_prompt_html' | t }}
  </p>

  <form
    method="post"
    action="/contact"
    id="contact_form"
    accept-charset="UTF-8"
    class="u-flex-column u-gap-12 u-max-w-420 u-mx-auto"
  >
    <input type="hidden" name="form_type" value="contact">
    <input type="hidden" name="utf8" value="âœ“">
    <input
      type="text"
      id="ContactFormName"
      name="contact[name]"
      required
      placeholder="{{ 'contact.comment_form_name' | t }}"
      class="contact-field"
    >
    <input
      type="email"
      id="ContactFormReply"
      name="contact[email]"
      required
      placeholder="{{ 'contact.comment_form_email' | t }}"
      class="contact-field"
    >
    <textarea
      id="ContactFormMessage"
      name="contact[body]"
      rows="5"
      required
      placeholder="{{ 'contact.message' | t }}"
      class="contact-field no-resize"
    ></textarea>
    <button
      type="submit"
      class="btn btn-primary u-mt-xs"
    >
      {{ 'contact.send_message' | t }}
    </button>
  </form>
  <div class="text-soft text-small text-italic u-mt-40 u-text-left">
    {{ 'contact.contact_note' | t }}
  </div>
  <div class="u-mt-40 u-text-center">
    {% render 'social-icons', size: 32 %}
  </div>
</div>
