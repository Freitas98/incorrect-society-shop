{% comment %}
  Contact Us Content - Card style, for use in policy-page.liquid layout
{% endcomment %}

<h2 class="text-lead">{{ 'contact.contact_highlight' | t }}</h2>
<p class="text-soft u-mb-lg">{{ 'contact.contact_intro' | t }}</p>

<div
  class="contact-card u-text-center"
>
  <h3 class="text-primary u-mb-lg">{{ 'contact.contact_now' | t | upcase }}</h3>
  <p class="text-soft u-mb-lg">
    {{ 'contact.contact_prompt_html' | t }}
  </p>

  {% form 'contact', id: 'contact_form', class: 'contact-form', onsubmit: 'if(window.loadingScreen) window.loadingScreen.show()' %}
    {% if form.posted_successfully? %}
      <p class="form-success">
        Thanks for contacting us. We will get back to you as soon as possible.
      </p>
    {% endif %}
    
    {{ form.errors | default_errors }}

    <input
      type="text"
      id="ContactFormName"
      name="contact[name]"
      required
      placeholder="{{ 'contact.comment_form_name' | t }}"
      autocomplete="name"
      value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
    >
    <input
      type="email"
      id="ContactFormEmail"
      name="contact[email]"
      required
      placeholder="{{ 'contact.comment_form_email' | t }}"
      autocomplete="email"
      value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
    >
    <textarea
      id="ContactFormMessage"
      name="contact[body]"
      rows="5"
      required
      placeholder="{{ 'contact.message' | t }}"
    >{% if form.body %}{{ form.body }}{% endif %}</textarea>
    <button
      type="submit"
      class="btn btn--primary"
    >
      {{ 'contact.send_message' | t }}
    </button>
  {% endform %}
  <div class="text-soft text-small text-italic u-mt-40 u-text-left">
    {{ 'contact.contact_note' | t }}
  </div>
  <div class="u-mt-40 u-text-center">
    {% render 'social-icons', size: 32 %}
  </div>
</div>
